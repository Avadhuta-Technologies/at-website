  <!-- Pods Section -->
  <HomePodsSection data={homePodsData} />
  
  <!-- Packs Section -->
  <HomePacksSection />

  <!-- Pod Strategist Section -->
  <HomePodStrategistSection data={homePodStrategistData} />
  
  <!-- Why Works Section -->
  <HomeWhyWorksSection data={homeWhyWorksData} />
  
  <!-- Built For Section -->
  <HomeBuiltForSection data={homeBuiltForData} />
  
