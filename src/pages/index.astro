    title={homeData.whyChoose.title}
    cards={homeData.whyChoose.cards}
  />

  <FeaturesSection 
    title={homeData.included.title}
    image={homeData.included.image}
    items={homeData.included.items}
  />

  <PodsGridSection 
    title="Popular Project Pods"
    pods={podsData.availablePods.pods.slice(0, 3)}
  />

  {/* Temporarily comment out to debug
