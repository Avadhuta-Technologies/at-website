    title={homeData.faq.title}
    subtitle={homeData.faq.subtitle}
    items={homeData.faq.items}
  />

  <CTASection 
    title={homeData.cta.title}
    description={homeData.cta.description}
    buttonText={homeData.cta.buttonText}
    email={homeData.cta.email}
    downloadLink={homeData.cta.downloadLink}
  />

