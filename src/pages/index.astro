      "geoMidpoint": {
        "@type": "GeoCoordinates",
        "latitude": 20.5937,
        "longitude": 78.9629
      },
      "geoRadius": "10000"
    },
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Development Pods",
      "itemListElement": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Development Pods",
            "description": "Dedicated development teams for startups and enterprises"
          }
        }
      ]
    }
  })} />
  
  <!-- Hero Section -->
  <HomeHeroSection data={homeHeroData} />

  <!-- How It Works Section -->
