---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/layout/Breadcrumb.astro';
import EnhancePodHeroSection from '../components/enhance-pod/EnhancePodHeroSection.astro';
import EnhancePodEnhancementsSection from '../components/enhance-pod/EnhancePodEnhancementsSection.astro';
import CTASection from '../components/shared/CTASection.astro';

// Import isolated enhance-pod content
import { 
  enhancePodHeroData,
  enhancePodEnhancementsData
} from '../content/enhance-pod/_index.js';
---

<Layout 
  description="Enhance your existing pod with additional team members and specialized skills. Take your project to the next level with our enhancement options."
  title="Enhance Pod | NovaPod.ai"
>
  <Breadcrumb>
    <Fragment slot="title">Enhance Pod</Fragment>
  </Breadcrumb>
  
  <!-- Hero Section -->
  <EnhancePodHeroSection data={enhancePodHeroData} />
  
  <!-- Enhancements Section -->
  <EnhancePodEnhancementsSection data={enhancePodEnhancementsData} />
  
  <!-- Final CTA Section -->
  <CTASection 
    title="Ready to Enhance Your Pod?"
    subtitle="Choose the enhancements that align with your project needs and let's accelerate your success."
    primaryButton={{
      text: "Get Started",
      url: "/contact"
    }}
    secondaryButton={{
      text: "Learn More",
      url: "/explore-pods"
    }}
  />
</Layout> 