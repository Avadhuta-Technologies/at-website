---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/sections/HeroSection.astro';
import WhyChooseSection from '../components/sections/WhyChooseSection.astro';
import HowItWorksSection from '../components/sections/HowItWorksSection.astro';
import PacksGridSection from '../components/sections/PacksGridSection.astro';
import FAQSection from '../components/sections/FAQSection.astro';
import TestimonialsSection from '../components/sections/TestimonialsSection.astro';
import CTASection from '../components/sections/CTASection.astro';
import { packsData } from '../content/packs.js';
---

<Layout description="Explore our fixed scope packs for predictable outcomes and deadlines." title="Explore Packs | Avadhuta Technologies">

  <HeroSection 
    title={packsData.hero.title}
    subtitle={packsData.hero.subtitle}
    description={packsData.hero.description}
  />

  <WhyChooseSection 
    title={packsData.whyChoose.title}
    cards={packsData.whyChoose.cards}
  />

  <HowItWorksSection 
    title={packsData.howItWorks.title}
    steps={packsData.howItWorks.steps}
  />

  <PacksGridSection 
    title={packsData.popularPacks.title}
    packs={packsData.popularPacks.packs}
  />

  <FAQSection 
    title={packsData.faq.title}
    subtitle={packsData.faq.subtitle}
    items={packsData.faq.items}
  />

  <TestimonialsSection 
    title={packsData.testimonials.title}
    items={packsData.testimonials.items}
  />

  <CTASection 
    title={packsData.cta.title}
    description={packsData.cta.description}
    buttonText={packsData.cta.buttonText}
    email={packsData.cta.email}
    downloadLink={packsData.cta.downloadLink}
  />

</Layout> 