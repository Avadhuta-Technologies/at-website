---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/shared/HeroSection.astro';
import WhyChooseSection from '../components/packs/WhyChooseSection.astro';
import PacksHowItWorksSection from '../components/packs/PacksHowItWorksSection.astro';
import PacksGridSection from '../components/packs/PacksGridSection.astro';
import FAQSection from '../components/shared/FAQSection.astro';
import TestimonialsSection from '../components/shared/TestimonialsSection.astro';
import CTASection from '../components/shared/CTASection.astro';
import { packsData } from '../content/packs.js';
---

<Layout description="Explore our fixed scope packs for predictable outcomes and deadlines." title="Explore Packs | Avadhuta Technologies">

  <HeroSection data={packsData.hero} />

  <WhyChooseSection data={packsData.whyChoose} />

  <PacksHowItWorksSection data={packsData.howItWorks} />

  <PacksGridSection data={packsData.availablePacks} />

  <FAQSection data={packsData.faq} />

  <TestimonialsSection data={packsData.testimonials} />

  <CTASection data={packsData.cta} />

</Layout> 