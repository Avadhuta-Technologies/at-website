---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/layout/Breadcrumb.astro';
import ExplorePacksHeroSection from '../components/explore-packs/ExplorePacksHeroSection.astro';
import ExplorePacksGroupedSection from '../components/explore-packs/ExplorePacksGroupedSection.astro';
import ExplorePacksWhyChooseSection from '../components/explore-packs/ExplorePacksWhyChooseSection.astro';
import ExplorePacksWhyChooseFixedScopeSection from '../components/explore-packs/ExplorePacksWhyChooseFixedScopeSection.astro';
import ExplorePacksHowItWorksFixedScopeSection from '../components/explore-packs/ExplorePacksHowItWorksFixedScopeSection.astro';

// Import isolated explore-packs content
import { 
  explorePacksHeroData,
  exploreAvailablePacksData,
  explorePacksWhyChooseData,
  whyChooseFixedScopeData,
  howItWorksFixedScopeData
} from '../content/explore-packs/_index.js';
---

<Layout 
  description="Explore our pre-configured development packs. Choose from startup accelerator, ecommerce, SaaS platform, and mobile app packs with fixed pricing."
  title="Explore Packs | NovaPod.ai"
>

  
  <!-- Hero Section -->
  <ExplorePacksHeroSection data={explorePacksHeroData} />
   
  <!-- Why Choose Fixed Scope Section -->
  <ExplorePacksWhyChooseFixedScopeSection data={whyChooseFixedScopeData} />
  
  <!-- How It Works Fixed Scope Section -->
  <ExplorePacksHowItWorksFixedScopeSection data={howItWorksFixedScopeData} />

  <!-- Packs Section -->
  <ExplorePacksGroupedSection data={exploreAvailablePacksData} />
  
  <!-- Why Choose Section -->
  <ExplorePacksWhyChooseSection data={explorePacksWhyChooseData} />
 
</Layout>

<style>
  /* Page-specific styles */
  .explore-packs-page {
    /* Any explore-packs page specific styles can go here */
  }
</style> 