---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/layout/Breadcrumb.astro';
import ExplorePacksHeroSection from '../components/explore-packs/ExplorePacksHeroSection.astro';
import ExplorePacksPacksSection from '../components/explore-packs/ExplorePacksPacksSection.astro';
import ExplorePacksWhyChooseSection from '../components/explore-packs/ExplorePacksWhyChooseSection.astro';

// Import isolated explore-packs content
import { 
  explorePacksHeroData,
  explorePacksPacksData,
  explorePacksWhyChooseData
} from '../content/explore-packs/_index.js';
---

<Layout 
  description="Explore our pre-configured development packs. Choose from startup accelerator, ecommerce, SaaS platform, and mobile app packs with fixed pricing."
  title="Explore Packs | NovaPod.ai"
>
  <Breadcrumb>
    <Fragment slot="title">Explore Packs</Fragment>
  </Breadcrumb>
  
  <!-- Hero Section -->
  <ExplorePacksHeroSection data={explorePacksHeroData} />
  
  <!-- Packs Section -->
  <ExplorePacksPacksSection data={explorePacksPacksData} />
  
  <!-- Why Choose Section -->
  <ExplorePacksWhyChooseSection data={explorePacksWhyChooseData} />
</Layout>

<style>
  /* Page-specific styles */
  .explore-packs-page {
    /* Any explore-packs page specific styles can go here */
  }
</style> 