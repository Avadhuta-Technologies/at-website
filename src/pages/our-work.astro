---
import Layout from '../layouts/Layout.astro';
import WorkHero from '../components/WorkHero.astro';
import PortfolioGallery from '../components/PortfolioGallery.astro';
import CTAsection from '../components/CTAsection.astro';
---

<Layout title="Our Work | Avadhuta Technologies" description="Explore our portfolio of projects across AI, automation, eCommerce, healthcare, and field ops. See how we solve complex problems for real businesses.">
  <!-- Hero Section -->
  <WorkHero
    title="Our Work"
    subtitle="Solving Complex Problems Across Industries"
    description="From healthcare compliance and AI-driven hiring to immersive 3D visualizations and patrol tracking apps — we build purposeful software that delivers results. Explore how we apply cutting-edge technology to real-world business challenges."
    ctaText="View All Portfolio"
    ctaLink="/portfolio"
  />

  <PortfolioGallery
    title="AI & Automation"
    projects={[
      {
        image: '/assets/about/about-image-01.jpg',
        title: 'AI-Powered Interview Assistant',
        category: 'AI & Automation',
        description: 'Automated interviews, candidate evaluation, and shortlisting for faster hiring.',
        link: '#',
      },
      {
        image: '/assets/about/about-image-02.jpg',
        title: 'AI-Based Room Layout Generator',
        category: 'AI & Automation',
        description: 'Transforms preferences and catalog data into ready-to-use interior design suggestions.',
        link: '#',
      },
    ]}
  />

  <PortfolioGallery
    title="Retail, Design & eCommerce"
    projects={[
      {
        image: '/assets/blog/blog-01.jpg',
        title: '3D Interior Visualization Tool (Browser-Based)',
        category: 'Retail, Design & eCommerce',
        description: 'Lets customers design and preview modular furniture in real-time 3D, creating print-ready installation specifications.',
        link: '#',
      },
      {
        image: '/assets/blog/blog-02.jpg',
        title: 'Customizable eCommerce Storefront Platform',
        category: 'Retail, Design & eCommerce',
        description: 'Built for a telecom-focused use case, allowing multiple brand stores to go live with deep backend integrations for plan bundling, payments, and order fulfillment.',
        link: '#',
      },
    ]}
  />

  <PortfolioGallery
    title="Healthcare & Pharma"
    projects={[
      {
        image: '/assets/blog/blog-03.jpg',
        title: 'Regulatory Intelligence Workflow System',
        category: 'Healthcare & Pharma',
        description: 'A digital platform to manage drug safety updates, assign analyst tasks, and maintain audit trails — reducing human error and regulatory risks.',
        link: '#',
      },
      {
        image: '/assets/blog/blog-details-01.jpg',
        title: 'Automated Data Reconciliation Tool',
        category: 'Healthcare & Pharma',
        description: 'Helps pharma firms cross-verify regulatory reports against internal records, automatically flagging mismatches and reducing compliance effort.',
        link: '#',
      },
    ]}
  />

  <PortfolioGallery
    title="Security & Field Ops"
    projects={[
      {
        image: '/assets/testimonials/author-01.jpg',
        title: 'Security Guard Patrol Tracking App',
        category: 'Security & Field Ops',
        description: 'Enables field guards to log patrols, report incidents, and upload geo-tagged media — all synced to a centralized admin dashboard.',
        link: '#',
      },
    ]}
  />

  <!-- Why Choose Section -->
  <section class="py-20 bg-gray-50 dark:bg-dark-2">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center mb-12">
        <span class="inline-block px-4 py-1 bg-primary/10 text-primary rounded-full text-sm font-medium mb-4">Why Choose Us</span>
        <h2 class="text-3xl md:text-4xl font-bold text-dark dark:text-white mb-4">Why Choose Avadhuta Technologies?</h2>
        <p class="text-body-color dark:text-dark-6 text-lg">We bring a unique combination of technical expertise and business understanding to every project.</p>
      </div>
      
      <div class="grid gap-8 md:grid-cols-3 max-w-5xl mx-auto">
        <!-- Problem-First Approach -->
        <div class="group bg-white dark:bg-dark rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-dark-3">
          <div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-primary group-hover:text-white transition-all duration-300">
            <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-dark dark:text-white mb-3">Problem-First Approach</h3>
          <p class="text-body-color dark:text-dark-6 leading-relaxed">We immerse ourselves in your domain before touching code, ensuring we understand your business challenges and goals completely.</p>
        </div>

        <!-- Tech That Scales -->
        <div class="group bg-white dark:bg-dark rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-dark-3">
          <div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-primary group-hover:text-white transition-all duration-300">
            <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-dark dark:text-white mb-3">Tech That Scales</h3>
          <p class="text-body-color dark:text-dark-6 leading-relaxed">Our solutions are built with scalability in mind, designed to grow with your business and handle increasing demands.</p>
        </div>

        <!-- Cross-Domain Excellence -->
        <div class="group bg-white dark:bg-dark rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 dark:border-dark-3">
          <div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-primary group-hover:text-white transition-all duration-300">
            <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-dark dark:text-white mb-3">Cross-Domain Excellence</h3>
          <p class="text-body-color dark:text-dark-6 leading-relaxed">We adapt fast and excel across industries — whether you're in pharma, retail, or any other domain.</p>
        </div>
      </div>

      <!-- Additional Benefits Row -->
      <div class="grid gap-6 md:grid-cols-2 max-w-4xl mx-auto mt-12">
        <div class="flex items-start gap-4">
          <div class="w-12 h-12 bg-green-100 dark:bg-green-900/20 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-dark dark:text-white mb-1">Proven Track Record</h4>
            <p class="text-sm text-body-color dark:text-dark-6">Successfully delivered projects across multiple industries with measurable results.</p>
          </div>
        </div>

        <div class="flex items-start gap-4">
          <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/20 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-dark dark:text-white mb-1">Fast Delivery</h4>
            <p class="text-sm text-body-color dark:text-dark-6">Agile development process ensures quick turnaround times without compromising quality.</p>
          </div>
        </div>

        <div class="flex items-start gap-4">
          <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900/20 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-dark dark:text-white mb-1">Dedicated Team</h4>
            <p class="text-sm text-body-color dark:text-dark-6">Experienced developers and designers committed to your project's success.</p>
          </div>
        </div>

        <div class="flex items-start gap-4">
          <div class="w-12 h-12 bg-orange-100 dark:bg-orange-900/20 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-dark dark:text-white mb-1">Ongoing Support</h4>
            <p class="text-sm text-body-color dark:text-dark-6">Continuous maintenance and support to keep your applications running smoothly.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <CTAsection
    title="Ready to Build Something Exceptional?"
    description="Whether you're exploring an idea, scaling an existing product, or solving a complex workflow — we're here to help you turn challenges into working software. Let's talk about what we can build together."
    cta1Text="Schedule Free Consultation"
    cta1Link="/contact"
    cta2Text="View All Portfolio"
    cta2Link="/portfolio"
    contactEmails={["contact@avadhutatech.com"]}
  />
</Layout> 