---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/layout/Breadcrumb.astro';
import OurWorkHeroSection from '../components/our-work/OurWorkHeroSection.astro';
import OurWorkGridSection from '../components/our-work/OurWorkGridSection.astro';
import OurWorkPortfolioCTASection from '../components/our-work/OurWorkPortfolioCTASection.astro';
import OurWorkWhyChooseSection from '../components/our-work/OurWorkWhyChooseSection.astro';
import OurWorkCTASection from '../components/our-work/OurWorkCTASection.astro';

// Import isolated our-work content
import { 
  ourWorkHeroData,
  ourWorkGridData,
  ourWorkCTAData,
  ourWorkIndustriesData,
  ourWorkPortfolioCTAData,
  ourWorkWhyChooseData
} from '../content/our-work/_index.js';
import OurWorkIndustriesSection from '../components/our-work/OurWorkIndustriesSection.astro';
---

<Layout 
  description="Explore our portfolio of successful projects across industries, from ecommerce platforms to AI-powered tools and mobile applications."
  title="Our Work | NovaPod.ai"
>

  <!-- Hero Section -->
  <OurWorkHeroSection data={ourWorkHeroData} />

  <!-- Industries Section -->
  <OurWorkIndustriesSection data={ourWorkIndustriesData} />
  
  <!-- Portfolio CTA Section -->
  <OurWorkPortfolioCTASection data={ourWorkPortfolioCTAData} />
  
  <!-- Why Choose Section -->
  <OurWorkWhyChooseSection data={ourWorkWhyChooseData} />
  
  <!-- Grid Section -->
  <OurWorkGridSection data={ourWorkGridData} />
  
  <!-- CTA Section -->
  <OurWorkCTASection data={ourWorkCTAData} />
</Layout> 