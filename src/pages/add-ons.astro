---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/layout/Breadcrumb.astro';
import AddOnsHeroSection from '../components/add-ons/AddOnsHeroSection.astro';
import AddOnsServicesSection from '../components/add-ons/AddOnsServicesSection.astro';
import SelectedItemsDisplay from '../components/shared/SelectedItemsDisplay.astro';
import CTASection from '../components/shared/CTASection.astro';

// Import isolated add-ons content
import { 
  addOnsHeroData,
  addOnsServicesData
} from '../content/add-ons/_index.js';

// Generate comprehensive meta information for the add-ons page
const generateMetaInfo = () => {
  const title = "Add-ons - Enhance Your Development Pod | NovaPod AI";
  const description = "Enhance your pod with specialized add-on services. From maintenance and support to analytics and DevOps, we have the expertise to accelerate your project's success.";
  
  // Generate keywords based on add-ons page content
  const keywords = [
    'development add-ons',
    'pod enhancement services',
    'maintenance and support',
    'analytics services',
    'DevOps services',
    'development team add-ons',
    'project acceleration',
    'specialized development services',
    'development support',
    'NovaPod AI add-ons',
    'development team enhancement',
    'project success services'
  ].join(', ');
  
  // Use NovaPod AI logo for consistent branding
  const image = '/assets/logo/novapod_ai_logo.svg';
  const imageAlt = 'Add-ons - Enhance Your Development Pod - NovaPod AI';
  
  // Generate canonical URL
  const canonicalUrl = 'https://novapod.ai/add-ons';
  
  return {
    title,
    description,
    keywords,
    image,
    imageAlt,
    canonicalUrl
  };
};

const metaInfo = generateMetaInfo();
---

<Layout 
  title={metaInfo.title}
  description={metaInfo.description}
  image={metaInfo.image}
>
  <!-- Enhanced Meta Tags for SEO -->
  <meta name="keywords" content={metaInfo.keywords} />
  <meta name="author" content="NovaPod AI" />
  <meta name="robots" content="index, follow" />
  <link rel="canonical" href={metaInfo.canonicalUrl} />
  
  <!-- Enhanced Open Graph Tags -->
  <meta property="og:title" content={metaInfo.title} />
  <meta property="og:description" content={metaInfo.description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={metaInfo.canonicalUrl} />
  <meta property="og:image" content={metaInfo.image} />
  <meta property="og:image:alt" content={metaInfo.imageAlt} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta property="og:site_name" content="NovaPod AI" />
  <meta property="og:locale" content="en_US" />
  
  <!-- Enhanced Twitter Card Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={metaInfo.title} />
  <meta name="twitter:description" content={metaInfo.description} />
  <meta name="twitter:image" content={metaInfo.image} />
  <meta name="twitter:image:alt" content={metaInfo.imageAlt} />
  <meta name="twitter:site" content="@novapod_ai" />
  <meta name="twitter:creator" content="@novapod_ai" />
  
  <!-- Additional Meta Tags -->
  <meta name="application-name" content="NovaPod AI" />
  <meta name="apple-mobile-web-app-title" content="NovaPod AI" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="default" />
  
  <!-- Structured Data for Rich Snippets -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "Development Add-ons",
    "description": metaInfo.description,
    "url": metaInfo.canonicalUrl,
    "mainEntity": {
      "@type": "ItemList",
      "name": "Development Add-on Services",
      "description": "Specialized add-on services to enhance development pods",
      "itemListElement": [
        {
          "@type": "Service",
          "name": "Maintenance & Support",
          "description": "Ongoing maintenance and technical support services"
        },
        {
          "@type": "Service",
          "name": "Analytics Services",
          "description": "Data analytics and insights for project optimization"
        },
        {
          "@type": "Service",
          "name": "DevOps Services",
          "description": "DevOps automation and infrastructure management"
        }
      ]
    }
  })} />

  <!-- Hero Section -->
  <AddOnsHeroSection data={addOnsHeroData} />
  
  <!-- Main Content -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Selected Items Display -->
        <div class="lg:col-span-1">
          <div class="sticky top-8">
            <SelectedItemsDisplay />
          </div>
        </div>
        
        <!-- Services Section -->
        <div class="lg:col-span-2">
          <AddOnsServicesSection data={addOnsServicesData} />
        </div>
      </div>
    </div>
  </section>
  
  <!-- Final CTA Section -->
  <CTASection 
    title="Ready to Enhance Your Pod?"
    subtitle="Choose the add-ons that align with your project needs and let's build something amazing together."
    primaryButton={{
      label: "Get Started",
      href: "/contact"
    }}
    secondaryButton={{
      label: "Learn More",
      href: "/explore-pods"
    }}
  />
</Layout> 