---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/layout/Breadcrumb.astro';
---

<Layout title="404 - Page Not Found" description="The page you're looking for doesn't exist">
  <Breadcrumb title="404 - Page Not Found" />
  
  <section class="pt-20 pb-8 lg:pt-[120px] lg:pb-[70px]">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap -mx-4">
        <div class="w-full px-4">
          <div class="mx-auto max-w-[800px] text-center">
            <h2 class="mb-5 text-3xl font-bold text-dark sm:text-4xl md:text-[40px] md:leading-[1.2] gradient-title">
              Sorry, the page you're looking for doesn't exist
            </h2>
            <p class="mb-8 text-base text-body-color">
              The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
            </p>
            <a
              href="/"
              class="inline-flex items-center justify-center rounded-md bg-primary py-4 px-10 text-center text-base font-semibold text-white hover:bg-opacity-90 lg:px-8 xl:px-10"
            >
              Back to Homepage
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
