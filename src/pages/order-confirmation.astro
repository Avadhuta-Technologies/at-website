---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/layout/Breadcrumb.astro';
import OrderConfirmationHeroSection from '../components/order-confirmation/OrderConfirmationHeroSection.astro';
import OrderConfirmationNextStepsSection from '../components/order-confirmation/OrderConfirmationNextStepsSection.astro';
import CTASection from '../components/shared/CTASection.astro';

// Import isolated order-confirmation content
import { 
  orderConfirmationHeroData,
  orderConfirmationNextStepsData
} from '../content/order-confirmation/_index.js';
---

<Layout 
  description="Your order has been confirmed! Here's what happens next and how to get support."
  title="Order Confirmation | NovaPod.ai"
>
  <Breadcrumb>
    <Fragment slot="title">Order Confirmation</Fragment>
  </Breadcrumb>
  
  <!-- Hero Section -->
  <OrderConfirmationHeroSection data={orderConfirmationHeroData} />
  
  <!-- Next Steps Section -->
  <OrderConfirmationNextStepsSection data={orderConfirmationNextStepsData} />
  
  <!-- Final CTA Section -->
  <CTASection 
    title="Ready to Get Started?"
    subtitle="Your team is being assembled and will contact you soon. In the meantime, explore our resources."
    primaryButton={{
      text: "View Resources",
      url: "/our-work"
    }}
    secondaryButton={{
      text: "Contact Support",
      url: "/contact"
    }}
  />
</Layout> 