---
import Layout from '../layouts/Layout.astro';
import PortfolioHeroSection from '../components/portfolio/PortfolioHeroSection.astro';
import PortfolioProjectsSection from '../components/portfolio/PortfolioProjectsSection.astro';
import PortfolioWhyChooseSection from '../components/portfolio/PortfolioWhyChooseSection.astro';
import PortfolioCTASection from '../components/portfolio/PortfolioCTASection.astro';

// Import portfolio content
import {
  portfolioHeroData,
  portfolioProjectsData,
  portfolioWhyChooseData,
  portfolioCTAData,
} from '../content/portfolio/_index.js';

// Page metadata
const pageTitle = 'Portfolio - Avadhuta Tech';
const pageDescription =
  'Explore our portfolio of successful projects across various industries including AI, eCommerce, 3D visualization, and workflow automation.';
---

<Layout title={pageTitle} description={pageDescription}>
  <PortfolioHeroSection data={portfolioHeroData} />
  <PortfolioProjectsSection />
  <PortfolioWhyChooseSection data={portfolioWhyChooseData} />
  <PortfolioCTASection data={portfolioCTAData} />
</Layout>

