---
import Layout from '../../layouts/Layout.astro';
import CaseStudiesHeroSection from '../../components/case-studies/CaseStudiesHeroSection.astro';
import CaseStudiesGridSection from '../../components/case-studies/CaseStudiesGridSection.astro';

// Import case studies content
import { caseStudiesHeroData, caseStudiesData } from '../../content/case-studies/_index.js';

// Get the case study from props (provided by getStaticPaths)
const { caseStudy } = Astro.props;

// Helper function to get badge color class
function getBadgeColorClass(color: string): string {
  const colorMap: Record<string, string> = {
    'blue': 'bg-blue-100',
    'purple': 'bg-purple-100',
    'orange': 'bg-orange-100',
    'teal': 'bg-teal-100',
    'green': 'bg-green-100',
    'indigo': 'bg-indigo-100',
    'cyan': 'bg-cyan-100',
    'pink': 'bg-pink-100',
    'gray': 'bg-gray-100'
  };
  return colorMap[color] || 'bg-blue-100';
}

// Page metadata
const pageTitle = `${caseStudy.title} - Case Study - Avadhuta Tech`;
const pageDescription = caseStudy.problemStatement;

// Generate static paths for all case studies
export async function getStaticPaths() {
  return caseStudiesData.caseStudies.map(study => ({
    params: { id: study.id },
    props: { caseStudy: study }
  }));
}
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <CaseStudiesHeroSection data={caseStudiesHeroData} />
  
  <!-- Case Study Detail -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <!-- Case Study Header -->
        <div class="mb-12">
          <div class="flex items-center mb-6">
            <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${getBadgeColorClass(caseStudy.badgeColor || 'blue')} text-${caseStudy.badgeColor || 'blue'}-800 mr-4`}>
              {caseStudy.badge || caseStudy.industry}
            </span>
            <span class="text-sm text-gray-500">{caseStudy.industry}</span>
          </div>
          
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            {caseStudy.title}
          </h1>
          
          <p class="text-xl text-gray-600 leading-relaxed mb-8">
            {caseStudy.problemStatement}
          </p>
        </div>

        <!-- Case Study Content -->
        <div class="prose prose-lg max-w-none">
          <!-- Our Approach -->
          <div class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Our Approach</h2>
            <p class="text-gray-700 leading-relaxed">
              {caseStudy.ourApproach}
            </p>
          </div>

          <!-- Solution Highlights -->
          <div class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Solution Highlights</h2>
            <ul class="list-disc pl-6 space-y-2">
              {caseStudy.solutionHighlights.map(highlight => (
                <li class="text-gray-700">{highlight}</li>
              ))}
            </ul>
          </div>

          <!-- Impact -->
          <div class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Impact</h2>
            <ul class="list-disc pl-6 space-y-2">
              {caseStudy.impact.map(impact => (
                <li class="text-gray-700">{impact}</li>
              ))}
            </ul>
          </div>

          <!-- Technologies -->
          <div class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Technologies Used</h2>
            <div class="flex flex-wrap gap-2">
              {caseStudy.techStack.map(tech => (
                <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm font-medium">
                  {tech}
                </span>
              ))}
            </div>
          </div>

          <!-- Testimonial -->
          {caseStudy.testimonial && (
            <div class="mb-12 bg-blue-50 rounded-xl p-8">
              <blockquote class="text-lg italic text-gray-700 mb-4">
                "{caseStudy.testimonial.quote}"
              </blockquote>
              <cite class="text-sm text-gray-600">â€” {caseStudy.testimonial.author}</cite>
            </div>
          )}

          <!-- Call to Action -->
          {caseStudy.callToAction && (
            <div class="text-center">
              <p class="text-lg text-gray-700 mb-6">{caseStudy.callToAction}</p>
              <a href="/contact" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors">
                Get Started
              </a>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
  
  <!-- Related Case Studies -->
  <CaseStudiesGridSection data={{ 
    title: "Related Case Studies", 
    subtitle: "Explore more of our successful projects",
    caseStudies: caseStudiesData.caseStudies 
  }} />
</Layout> 