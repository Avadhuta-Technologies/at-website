---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/layout/Breadcrumb.astro';
import CTASection from '../../components/shared/CTASection.astro';
import { caseStudiesData } from '../../content/case-studies/_case-studies.js';

export async function getStaticPaths() {
  return caseStudiesData.caseStudies.map((study) => ({
    params: { id: study.id },
    props: { study }
  }));
}

const { study } = Astro.props;

// Utility functions for styling
function getBadgeColorClass(color: string) {
  const colorMap: Record<string, string> = {
    'blue': 'bg-blue-100 dark:bg-blue-900',
    'purple': 'bg-purple-100 dark:bg-purple-900',
    'orange': 'bg-orange-100 dark:bg-orange-900',
    'teal': 'bg-teal-100 dark:bg-teal-900',
    'green': 'bg-green-100 dark:bg-green-900',
    'indigo': 'bg-indigo-100 dark:bg-indigo-900',
    'cyan': 'bg-cyan-100 dark:bg-cyan-900',
    'pink': 'bg-pink-100 dark:bg-pink-900',
    'gray': 'bg-gray-100 dark:bg-gray-900'
  };
  return colorMap[color] || 'bg-blue-100 dark:bg-blue-900';
}

function getBadgeStyle(color: string) {
  const colorMap: Record<string, string> = {
    'blue': 'bg-blue-100 text-blue-800',
    'purple': 'bg-purple-100 text-purple-800',
    'orange': 'bg-orange-100 text-orange-800',
    'teal': 'bg-teal-100 text-teal-800',
    'green': 'bg-green-100 text-green-800',
    'indigo': 'bg-indigo-100 text-indigo-800',
    'cyan': 'bg-cyan-100 text-cyan-800',
    'pink': 'bg-pink-100 text-pink-800',
    'gray': 'bg-gray-100 text-gray-800'
  };
  return colorMap[color] || 'bg-blue-100 text-blue-800';
}
---

<Layout description={study.problemStatement} title={`${study.title} | Case Study | NovaPod.ai`}>

  <Breadcrumb>
    <Fragment slot="title">Case Studies</Fragment>
    <Fragment slot="item">{study.title}</Fragment>
  </Breadcrumb>

  <!-- Hero Section -->
  <section class="relative bg-white overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 bg-gray-50"></div>
    
    <!-- Decorative Elements -->
    <div class="absolute top-0 left-0 w-72 h-72 bg-primary-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-pulse"></div>
    <div class="absolute top-0 right-0 w-72 h-72 bg-purple-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-pulse animation-delay-2000"></div>
    
    <div class="relative z-10 container mx-auto px-4 py-20 md:py-32">
      <div class="max-w-4xl mx-auto text-center">
        
        <!-- Badge -->
        <div class="inline-flex items-center px-4 py-2 bg-primary-50 text-primary-700 text-sm font-semibold rounded-full mb-8 border border-primary-200">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          {study.badge}
        </div>
        
        <!-- Main Headline -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          {study.title}
        </h1>
        
        <!-- Subtitle -->
        <h2 class="text-xl md:text-2xl text-gray-600 mb-8 leading-relaxed max-w-3xl mx-auto">
          {study.problemStatement}
        </h2>
        
        <!-- Key Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12 max-w-3xl mx-auto">
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
            <div class="text-2xl font-bold text-blue-600 mb-1">{study.duration}</div>
            <div class="text-sm text-gray-600">Duration</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
            <div class="text-2xl font-bold text-green-600 mb-1">{study.teamComposition.split(',').length}</div>
            <div class="text-sm text-gray-600">Team Members</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
            <div class="text-2xl font-bold text-purple-600 mb-1">{study.techStack.length}</div>
            <div class="text-sm text-gray-600">Technologies</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
            <div class="text-2xl font-bold text-orange-600 mb-1">{study.impact.length}</div>
            <div class="text-sm text-gray-600">Key Results</div>
          </div>
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a 
            href="/contact" 
            class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors duration-200 group"
          >
            <span>Start Your Project</span>
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          
          <a 
            href="/case-studies" 
            class="inline-flex items-center px-6 py-3 bg-white text-gray-700 font-semibold rounded-lg border border-gray-300 hover:bg-gray-50 transition-colors duration-200 group"
          >
            <span>View All Case Studies</span>
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </a>
        </div>
        
      </div>
    </div>
  </section>

  <!-- Project Overview Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          
          <!-- Content -->
          <div class="animate-fade-in-up">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Project Overview</h2>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              {study.ourApproach}
            </p>
            
            <!-- Project Details -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
              <div class="bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-all duration-300 p-6">
                <div class="flex items-center mb-3">
                  <div class="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center mr-3">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                  </div>
                  <h3 class="font-semibold text-gray-900">Industry</h3>
                </div>
                <p class="text-gray-600">{study.industry}</p>
              </div>
              
              <div class="bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-all duration-300 p-6">
                <div class="flex items-center mb-3">
                  <div class="w-8 h-8 bg-green-500 rounded-lg flex items-center justify-center mr-3">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <h3 class="font-semibold text-gray-900">Duration</h3>
                </div>
                <p class="text-gray-600">{study.duration}</p>
              </div>
              
              <div class="bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-all duration-300 p-6">
                <div class="flex items-center mb-3">
                  <div class="w-8 h-8 bg-purple-500 rounded-lg flex items-center justify-center mr-3">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                  </div>
                  <h3 class="font-semibold text-gray-900">Team Size</h3>
                </div>
                <p class="text-gray-600">{study.teamComposition}</p>
              </div>
              
              <div class="bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-all duration-300 p-6">
                <div class="flex items-center mb-3">
                  <div class="w-8 h-8 bg-orange-500 rounded-lg flex items-center justify-center mr-3">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                    </svg>
                  </div>
                  <h3 class="font-semibold text-gray-900">Technologies</h3>
                </div>
                <p class="text-gray-600">{study.techStack.length} technologies</p>
              </div>
            </div>
          </div>
          
          <!-- Image -->
          <div class="animate-fade-in-up animation-delay-200">
            <div class="relative rounded-xl overflow-hidden shadow-lg">
              <img 
                src={study.image} 
                alt={study.title}
                class="w-full h-auto"
                loading="lazy"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Challenge & Solution Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        
        <!-- Challenge -->
        <div class="mb-16 animate-fade-in-up">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">The Challenge</h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
              Understanding the problem is the first step to creating an effective solution.
            </p>
          </div>
          
          <div class="bg-red-50 border-l-4 border-red-500 p-8 rounded-r-lg">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-red-500 rounded-full flex items-center justify-center mr-4 mt-1">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-red-800 mb-3">Problem Statement</h3>
                <p class="text-lg text-red-700 leading-relaxed">
                  {study.problemStatement}
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Solution -->
        <div class="animate-fade-in-up animation-delay-200">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Our Solution</h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
              A comprehensive approach that addresses the core challenges and delivers measurable results.
            </p>
          </div>
          
          <div class="bg-blue-50 border-l-4 border-blue-500 p-8 rounded-r-lg">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center mr-4 mt-1">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-blue-800 mb-3">Strategic Approach</h3>
                <p class="text-lg text-blue-700 leading-relaxed">
                  {study.ourApproach}
                </p>
              </div>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </section>

  <!-- Key Features Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Key Features</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            The core components that made this project successful and delivered exceptional value.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {study.solutionHighlights.map((highlight, index) => (
            <div class="flex items-start p-6 bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-all duration-300">
              <div class="flex-shrink-0 w-8 h-8 bg-green-500 rounded-lg flex items-center justify-center mr-4 mt-1">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <p class="text-gray-600 leading-relaxed">{highlight}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Results & Impact Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Results & Impact</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Measurable outcomes that demonstrate the success and value delivered to the client.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {study.impact.map((result, index) => (
            <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-200 hover:shadow-md transition-all duration-300">
              <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>
              <p class="text-gray-600 leading-relaxed">{result}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Client Testimonial</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Hear directly from our client about their experience and the results achieved.
          </p>
        </div>
        
        <div class="bg-gray-50 rounded-xl p-12 border border-gray-200">
          <div class="flex items-start">
            <div class="flex-shrink-0 w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center mr-6">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div>
              <blockquote class="text-2xl text-gray-700 italic mb-6 leading-relaxed">
                "{study.testimonial.quote}"
              </blockquote>
              <cite class="text-lg font-semibold text-gray-900">— {study.testimonial.author}</cite>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Technology Stack Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Technology Stack</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            The cutting-edge technologies and tools that powered this successful project.
          </p>
        </div>
        
        <div class="flex flex-wrap justify-center gap-4">
          {study.techStack.map((tech) => (
            <span class="inline-flex items-center px-6 py-3 bg-white text-gray-700 font-semibold rounded-lg border border-gray-200 hover:border-blue-300 hover:shadow-sm transition-all duration-300">
              {tech}
            </span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Related Case Studies Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Related Case Studies</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Explore more success stories and see how we've helped other clients achieve their goals.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          {caseStudiesData.caseStudies
            .filter(s => s.id !== study.id)
            .slice(0, 4)
            .map((relatedStudy) => (
              <a href={`/case-studies/${relatedStudy.id}`} class="group block bg-white rounded-xl p-8 border border-gray-200 shadow-sm hover:shadow-md transition-all duration-300 hover:-translate-y-1">
                <div class="mb-4">
                  <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${getBadgeStyle(relatedStudy.badgeColor)}`}>
                    {relatedStudy.badge}
                  </span>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors duration-300">
                  {relatedStudy.title}
                </h3>
                <p class="text-gray-600 leading-relaxed line-clamp-3">
                  {relatedStudy.problemStatement.substring(0, 120)}...
                </p>
              </a>
            ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="py-20 bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Main Headline -->
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6 leading-tight">
          {study.callToAction}
        </h2>
        
        <!-- Subtitle -->
        <p class="text-xl md:text-2xl text-gray-300 mb-8 leading-relaxed max-w-3xl mx-auto">
          Ready to start your own success story? Let's discuss your project and see how we can help you achieve similar results.
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/contact" 
            class="inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors duration-200 group"
          >
            <span>Start Your Project</span>
            <svg class="w-6 h-6 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          
          <a 
            href="/case-studies" 
            class="inline-flex items-center px-8 py-4 bg-white text-gray-900 font-semibold rounded-xl hover:bg-gray-100 transition-colors duration-200 group"
          >
            <span>View All Case Studies</span>
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

</Layout>

<style>
  .animate-fade-in-up { 
    animation: fadeInUp 0.8s ease-out; 
  }
  .animation-delay-200 { 
    animation-delay: 0.2s; 
  }
  .animation-delay-400 { 
    animation-delay: 0.4s; 
  }
  .animation-delay-600 { 
    animation-delay: 0.6s; 
  }
  .animation-delay-800 { 
    animation-delay: 0.8s; 
  }
  .animation-delay-1000 { 
    animation-delay: 1s; 
  }
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }
  @keyframes pulse {
