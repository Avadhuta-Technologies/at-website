---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/layout/Breadcrumb.astro';
import CTASection from '../../components/shared/CTASection.astro';
import { caseStudiesData } from '../../content/case-studies.js';

export async function getStaticPaths() {
  return caseStudiesData.caseStudies.map((study) => ({
    params: { id: study.id },
    props: { study }
  }));
}

const { study } = Astro.props;

// Utility functions for styling
function getBadgeColorClass(color) {
  const colorMap = {
    'blue': 'bg-blue-100 dark:bg-blue-900',
    'purple': 'bg-purple-100 dark:bg-purple-900',
    'orange': 'bg-orange-100 dark:bg-orange-900',
    'teal': 'bg-teal-100 dark:bg-teal-900',
    'green': 'bg-green-100 dark:bg-green-900',
    'indigo': 'bg-indigo-100 dark:bg-indigo-900',
    'cyan': 'bg-cyan-100 dark:bg-cyan-900',
    'pink': 'bg-pink-100 dark:bg-pink-900',
    'gray': 'bg-gray-100 dark:bg-gray-900'
  };
  return colorMap[color] || 'bg-blue-100 dark:bg-blue-900';
}

function getBadgeStyle(color) {
  const colorMap = {
    'blue': 'bg-blue-100 text-blue-800',
    'purple': 'bg-purple-100 text-purple-800',
    'orange': 'bg-orange-100 text-orange-800',
    'teal': 'bg-teal-100 text-teal-800',
    'green': 'bg-green-100 text-green-800',
    'indigo': 'bg-indigo-100 text-indigo-800',
    'cyan': 'bg-cyan-100 text-cyan-800',
    'pink': 'bg-pink-100 text-pink-800',
    'gray': 'bg-gray-100 text-gray-800'
  };
  return colorMap[color] || 'bg-blue-100 text-blue-800';
}
---

<Layout description={study.problemStatement} title={`${study.title} | Case Study | NovaPod.ai`}>

  <Breadcrumb>
    <Fragment slot="title">Case Studies</Fragment>
    <Fragment slot="item">{study.title}</Fragment>
  </Breadcrumb>

  <!-- Hero Section -->
  <section class="py-16 bg-gradient-to-br from-gray-50 to-blue-50 dark:from-dark-2 dark:to-dark-3">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Content -->
          <div class="animate-fade-in-up">
            <div class="mb-6">
              <span class={`inline-flex items-center px-4 py-2 rounded-full text-sm font-medium ${getBadgeStyle(study.badgeColor)}`}>
                {study.badge}
              </span>
            </div>
            
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-dark dark:text-white">
              {study.title}
            </h1>
            
            <p class="text-xl text-gray-600 dark:text-gray-400 mb-8 leading-relaxed">
              {study.problemStatement}
            </p>
            
            <!-- Key Stats -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
              <div class="text-center">
                <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">{study.duration}</div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Duration</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-green-600 dark:text-green-400">{study.teamComposition.split(',').length}</div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Team Members</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-purple-600 dark:text-purple-400">{study.techStack.length}</div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Technologies</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold text-orange-600 dark:text-orange-400">{study.impact.length}</div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Key Results</div>
              </div>
            </div>
            
            <!-- CTA -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a href="/contact" class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-semibold rounded-xl hover:from-blue-600 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                <span>Start Your Project</span>
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
              <a href="/case-studies" class="inline-flex items-center px-8 py-4 border-2 border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-semibold rounded-xl hover:border-blue-500 hover:text-blue-600 dark:hover:text-blue-400 transition-all duration-300">
                <span>View All Case Studies</span>
              </a>
            </div>
          </div>
          
          <!-- Image -->
          <div class="animate-fade-in-up animation-delay-200">
            <div class="relative rounded-2xl overflow-hidden shadow-2xl">
              <img 
                src={study.image} 
                alt={study.title}
                class="w-full h-auto"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Project Details -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
          
          <!-- Main Content -->
          <div class="lg:col-span-2">
            
            <!-- Problem Statement -->
            <div class="mb-12 animate-fade-in-up">
              <h2 class="text-3xl font-bold mb-6 text-dark dark:text-white">The Challenge</h2>
              <div class="bg-red-50 dark:bg-red-900/20 border-l-4 border-red-500 p-6 rounded-r-lg">
                <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
                  {study.problemStatement}
                </p>
              </div>
            </div>
            
            <!-- Our Approach -->
            <div class="mb-12 animate-fade-in-up animation-delay-200">
              <h2 class="text-3xl font-bold mb-6 text-dark dark:text-white">Our Solution</h2>
              <div class="bg-blue-50 dark:bg-blue-900/20 border-l-4 border-blue-500 p-6 rounded-r-lg">
                <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
                  {study.ourApproach}
                </p>
              </div>
            </div>
            
            <!-- Solution Highlights -->
            <div class="mb-12 animate-fade-in-up animation-delay-400">
              <h2 class="text-3xl font-bold mb-6 text-dark dark:text-white">Key Features</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {study.solutionHighlights.map((highlight, index) => (
                  <div class="flex items-start p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
                    <div class="flex-shrink-0 w-6 h-6 bg-green-500 rounded-full flex items-center justify-center mr-3 mt-0.5">
                      <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <span class="text-gray-700 dark:text-gray-300">{highlight}</span>
                  </div>
                ))}
              </div>
            </div>
            
            <!-- Impact & Results -->
            <div class="mb-12 animate-fade-in-up animation-delay-600">
              <h2 class="text-3xl font-bold mb-6 text-dark dark:text-white">Results & Impact</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {study.impact.map((result, index) => (
                  <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 p-6 rounded-lg">
                    <div class="flex items-center mb-3">
                      <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center mr-3">
                        <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                      </div>
                      <h3 class="text-lg font-semibold text-green-800 dark:text-green-200">Result {index + 1}</h3>
                    </div>
                    <p class="text-green-700 dark:text-green-300">{result}</p>
                  </div>
                ))}
              </div>
            </div>
            
            <!-- Testimonial -->
            <div class="mb-12 animate-fade-in-up animation-delay-800">
              <h2 class="text-3xl font-bold mb-6 text-dark dark:text-white">Client Testimonial</h2>
              <div class="bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-900/20 dark:to-purple-900/20 p-8 rounded-2xl border border-blue-200 dark:border-blue-800">
                <div class="flex items-start">
                  <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center mr-4">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div>
                    <blockquote class="text-xl text-gray-700 dark:text-gray-300 italic mb-4">
                      "{study.testimonial.quote}"
                    </blockquote>
                    <cite class="text-sm text-gray-600 dark:text-gray-400">— {study.testimonial.author}</cite>
                  </div>
                </div>
              </div>
            </div>
            
          </div>
          
          <!-- Sidebar -->
          <div class="animate-fade-in-up animation-delay-1000">
            
            <!-- Project Info -->
            <div class="bg-white dark:bg-dark-1 rounded-2xl shadow-lg p-6 mb-8">
              <h3 class="text-xl font-bold mb-4 text-dark dark:text-white">Project Details</h3>
              
              <div class="space-y-4">
                <div>
                  <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Industry</span>
                  <p class="text-gray-900 dark:text-white">{study.industry}</p>
                </div>
                
                <div>
                  <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Engagement Type</span>
                  <p class="text-gray-900 dark:text-white">{study.engagementType}</p>
                </div>
                
                <div>
                  <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Duration</span>
                  <p class="text-gray-900 dark:text-white">{study.duration}</p>
                </div>
                
                <div>
                  <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Team Composition</span>
                  <p class="text-gray-900 dark:text-white">{study.teamComposition}</p>
                </div>
              </div>
            </div>
            
            <!-- Tech Stack -->
            <div class="bg-white dark:bg-dark-1 rounded-2xl shadow-lg p-6 mb-8">
              <h3 class="text-xl font-bold mb-4 text-dark dark:text-white">Technology Stack</h3>
              <div class="flex flex-wrap gap-2">
                {study.techStack.map((tech) => (
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
            
            <!-- Related Case Studies -->
            <div class="bg-white dark:bg-dark-1 rounded-2xl shadow-lg p-6">
              <h3 class="text-xl font-bold mb-4 text-dark dark:text-white">Related Case Studies</h3>
              <div class="space-y-4">
                {caseStudiesData.caseStudies
                  .filter(s => s.id !== study.id)
                  .slice(0, 3)
                  .map((relatedStudy) => (
                    <a href={`/case-studies/${relatedStudy.id}`} class="block p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-blue-300 dark:hover:border-blue-600 transition-colors">
                      <h4 class="font-semibold text-gray-900 dark:text-white mb-2">{relatedStudy.title}</h4>
                      <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">{relatedStudy.problemStatement.substring(0, 80)}...</p>
                    </a>
                  ))}
              </div>
            </div>
            
          </div>
          
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-gradient-to-r from-blue-600 to-purple-600">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">
          {study.callToAction}
        </h2>
        <p class="text-xl text-blue-100 mb-8">
          Ready to start your own success story? Let's discuss your project and see how we can help you achieve similar results.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="inline-flex items-center px-8 py-4 bg-white text-blue-600 font-semibold rounded-xl hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-lg">
            <span>Start Your Project</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a href="/case-studies" class="inline-flex items-center px-8 py-4 border-2 border-white text-white font-semibold rounded-xl hover:bg-white hover:text-blue-600 transition-all duration-300">
            <span>View All Case Studies</span>
          </a>
        </div>
      </div>
    </div>
  </section>

</Layout>

<style>
  .animate-fade-in-up { 
    animation: fadeInUp 0.8s ease-out; 
  }
  .animation-delay-200 { 
    animation-delay: 0.2s; 
  }
  .animation-delay-400 { 
    animation-delay: 0.4s; 
  }
  .animation-delay-600 { 
    animation-delay: 0.6s; 
  }
  .animation-delay-800 { 
    animation-delay: 0.8s; 
  }
  .animation-delay-1000 { 
    animation-delay: 1s; 
  }
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style> 