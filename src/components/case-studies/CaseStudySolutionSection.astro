---
export interface Props {
  solutionHighlights: string[];
}

const { solutionHighlights } = Astro.props;
---

<section class="py-20 relative overflow-hidden">
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-inter font-bold text-graphite-900 mb-4 gradient-title">Solution Highlights</h2>
      <p class="text-lg font-inter text-graphite-600 leading-relaxed">Key features and solutions delivered</p>
    </div>
    
    <div class="max-w-6xl mx-auto">
      <div class="max-w-screen-2xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-6">
        {solutionHighlights.map((highlight, index) => (
          <div class="step-card group relative overflow-hidden rounded-xl transition-all duration-300 hover:scale-105 hover:-translate-y-1">
            <!-- Card Background - Solid color instead of gradient -->
            <div class="absolute inset-0 bg-white/90 backdrop-blur-sm border border-white/30 rounded-xl shadow-sm group-hover:shadow-xl transition-all duration-300"></div>
            
            <!-- Card Content -->
            <div class="relative p-6 flex flex-col h-full">
              <!-- Step Header with Icon and Number -->
              <div class="flex items-start justify-between mb-5">
                <div class="w-14 h-14 bg-mint-100 border-mint-200 text-mint-700 rounded-xl flex items-center justify-center border group-hover:scale-110 transition-transform duration-300">
                  <span class="text-2xl">âœ¨</span>
                </div>
                
                <!-- Step Number Badge -->
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-inter font-medium bg-mint-100 text-mint-700 border border-mint-200">
                  Step {index + 1}
                </span>
              </div>
              
              <!-- Title and Description -->
              <div class="mb-5">
                <h3 class="text-xl font-inter font-semibold text-graphite-900 mb-3 group-hover:text-graphite-800 transition-colors duration-300 leading-tight">
                  Solution #{index + 1}
                </h3>
                <p class="text-graphite-600 leading-relaxed font-inter line-clamp-3">
                  {highlight}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section> 