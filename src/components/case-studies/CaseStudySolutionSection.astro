---
export interface Props {
  solutionHighlights: string[];
}

const { solutionHighlights } = Astro.props;
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Solution Highlights
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-primary-600 to-primary-700 mx-auto rounded-full"></div>
      </div>
      
      <!-- Solution Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {solutionHighlights.map((highlight, index) => (
          <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
            <div class="flex items-start">
              <div class="w-10 h-10 bg-gradient-to-r from-green-500 to-green-600 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <span class="text-white font-semibold text-sm">{index + 1}</span>
              </div>
              <div>
                <p class="text-gray-700 leading-relaxed">
                  {highlight}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section> 