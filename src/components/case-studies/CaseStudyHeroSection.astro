---
export interface Props {
  caseStudy: {
    title: string;
    industry: string;
    badge: string;
    badgeColor: string;
    problemStatement: string;
  };
}

const { caseStudy } = Astro.props;

// Helper function to get badge color class - using brand colors
function getBadgeColorClass(color: string): string {
  const colorMap: Record<string, string> = {
    'blue': 'bg-cerulean-100 text-cerulean-800 border-cerulean-200',
    'purple': 'bg-graphite-100 text-graphite-800 border-graphite-200',
    'orange': 'bg-mint-100 text-mint-800 border-mint-200',
    'teal': 'bg-mint-100 text-mint-800 border-mint-200',
    'green': 'bg-mint-100 text-mint-800 border-mint-200',
    'indigo': 'bg-cerulean-100 text-cerulean-800 border-cerulean-200',
    'cyan': 'bg-cerulean-100 text-cerulean-800 border-cerulean-200',
    'pink': 'bg-mint-100 text-mint-800 border-mint-200',
    'gray': 'bg-graphite-100 text-graphite-800 border-graphite-200'
  };
  return colorMap[color] || 'bg-cerulean-100 text-cerulean-800 border-cerulean-200';
}
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
  <div class="absolute top-0 left-1/4 w-72 h-72 bg-gradient-to-br from-mint-500/30 to-cerulean-500/30 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-gradient-to-tr from-mint-100/30 to-cerulean-100/30 rounded-full blur-3xl"></div>
  
  <!-- Main Content -->
  <div class="relative z-10 container mx-auto px-4 py-20 md:py-32">
    <div class="max-w-6xl mx-auto text-center">
      
      <!-- Glass Badge -->
      <div class="inline-flex items-center px-4 py-2 glass border-mint-200/30 text-mint-700 text-sm font-semibold rounded-full mb-8 hover:glass-strong transition-all duration-300">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
        {caseStudy.badge}
      </div>
      
      <!-- Breadcrumb -->
      <nav class="flex items-center justify-center mb-8 text-sm font-inter text-graphite-500">
        <a href="/case-studies" class="hover:text-mint-600 transition-colors">Case Studies</a>
        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-graphite-400">{caseStudy.title}</span>
      </nav>
      
      <!-- Badge and Industry -->
      <div class="flex items-center justify-center gap-4 mb-6">
        <span class={`inline-flex items-center px-4 py-2 rounded-full text-sm font-inter font-semibold border ${getBadgeColorClass(caseStudy.badgeColor)}`}>
          {caseStudy.badge}
        </span>
        <span class="text-graphite-500 font-inter font-medium">â€¢</span>
        <span class="text-graphite-600 font-inter font-medium">{caseStudy.industry}</span>
      </div>
      
      <!-- Main Headline -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold gradient-title mb-6 leading-tight">
        {caseStudy.title}
      </h1>
      
      <!-- Problem Statement -->
      <div class="max-w-3xl mx-auto">
        <p class="text-xl md:text-2xl font-inter text-graphite-700 mb-8 leading-relaxed">
          {caseStudy.problemStatement}
        </p>
      </div>
      
      <!-- CTA Buttons with Glassmorphism -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="/contact" 
          class="inline-flex items-center px-6 py-3 rounded-lg bg-gradient-to-r from-mint-500 to-cerulean-500 text-white font-inter font-semibold hover:from-mint-600 hover:to-cerulean-600 
            transition-all duration-300 hover:scale-105 hover:shadow-md group flex-shrink-0 shadow-sm"
        >
          <span>Start Your Project</span>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        
        <a 
          href="/case-studies" 
          class="inline-flex items-center px-6 py-3 glass border-graphite-300/50 text-graphite-700 font-inter font-semibold rounded-lg hover:bg-graphite-50/50 hover:border-graphite-400/70 transition-all duration-300 group hover:scale-105"
        >
          <span>View All Case Studies</span>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </a>
      </div>
      
      
    </div>
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(rgba(0,0,0,0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0,0,0,0.1) 1px, transparent 1px);
    background-size: 20px 20px;
  }
</style> 