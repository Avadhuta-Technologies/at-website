        </svg>
        <span class="text-gray-400">{caseStudy.title}</span>
      </nav>
      
      <!-- Badge and Industry -->
      <div class="flex items-center justify-center gap-4 mb-6">
        <span class={`inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold ${getBadgeColorClass(caseStudy.badgeColor)}`}>
          {caseStudy.badge}
