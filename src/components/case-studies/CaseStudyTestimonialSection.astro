---
export interface Props {
  testimonial: {
    quote: string;
    author: string;
  };
}

const { testimonial } = Astro.props;
---

<section class="py-16">
  <div class="container mx-auto max-w-screen-2xl px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-inter font-bold text-graphite-900 mb-4">Client Testimonial</h2>
        <p class="text-lg text-graphite-600 font-inter leading-relaxed">What our client says about the project</p>
      </div>
      
      <!-- Testimonial Card -->
      <div class="max-w-4xl mx-auto bg-glass-strong">
        <div class="group relative overflow-hidden rounded-xl transition-all duration-300 hover:scale-[1.02] hover:-translate-y-1">
          <!-- Card Background - Solid color instead of gradient (matching brand guidelines) -->
          <div class="absolute inset-0 bg-white/90 backdrop-blur-sm border border-white/30 rounded-xl shadow-sm group-hover:shadow-xl transition-all duration-300"></div>
          
          <!-- Card Content -->
          <div class="relative p-6">
            <div class="text-center">
              <!-- Quote Icon -->
              <div class="w-16 h-16 bg-gradient-to-r from-mint-500 to-cerulean-500 rounded-full flex items-center justify-center mx-auto mb-8">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
                </svg>
              </div>
              
              <!-- Quote -->
              <blockquote class="text-xl font-inter text-graphite-700 italic leading-relaxed mb-8">
                {testimonial.quote}
              </blockquote>
              
              <!-- Author -->
              <cite class="text-lg font-inter text-graphite-600 font-semibold">
                â€” {testimonial.author}
              </cite>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 