---
import { testimonialsData } from '../../content/home/_testimonials.js';

export interface Props {
  data?: any;
  className?: string;
}

const { data = testimonialsData, className = "" } = Astro.props;
---

<section id="testimonials" class="py-20 md:py-[120px] bg-gray-1 overflow-hidden">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap -mx-4">
      <div class="w-full px-4">
        <div class="mx-auto max-w-[800px] text-center mb-20">
          <h2 class="text-dark mb-3 text-3xl leading-[1.2] font-bold sm:text-4xl md:text-[40px]">
            {data.title}
          </h2>
          <p class="text-base text-body-color">
            {data.subtitle}
          </p>
        </div>
      </div>
    </div>

    <div class="flex flex-wrap -mx-4">
      {data.testimonials.map((testimonial, index) => (
        <div class="w-full md:w-1/2 lg:w-1/3 px-4">
          <div class="shadow-testimonial bg-white rounded-xl py-[30px] px-4 sm:px-[30px]" data-wow-delay=".1s">
            <div class="flex items-center mb-6">
              <div class="w-12 h-12 rounded-full overflow-hidden mr-4">
                <img
                  src={testimonial.avatar}
                  alt={testimonial.name}
                  class="w-full h-full object-cover"
                />
              </div>
              <div>
                <h3 class="font-semibold text-sm text-dark">
                  {testimonial.name}
                </h3>
                <p class="text-xs text-body-color">{testimonial.position}</p>
              </div>
            </div>
            <p class="text-body-color text-base mb-6">{testimonial.message}</p>
            <div class="flex items-center">
              {[...Array(5)].map((_, i) => (
                <svg
                  key={i}
                  class={`w-4 h-4 ${
                    i < testimonial.rating ? 'text-yellow-400' : 'text-gray-300'
                  }`}
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
