---
import { teamData } from '../../content/home/_team.js';

export interface Props {
  data?: any;
  className?: string;
}

const { data = teamData, className = "" } = Astro.props;
---

<section id="team" class="bg-gray-1 overflow-hidden pt-20 pb-12 lg:pt-[120px] lg:pb-[90px]">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap -mx-4">
      <div class="w-full px-4">
        <div class="mx-auto max-w-[800px] text-center mb-20">
          <h2 class="mb-3 text-3xl leading-[1.2] font-bold text-dark sm:text-4xl md:text-[40px]">
            {data.title}
          </h2>
          <p class="text-body-color text-base">
            {data.subtitle}
          </p>
        </div>
      </div>
    </div>

    <div class="flex flex-wrap -mx-4">
      {data.members.map((member, index) => (
        <div class="w-full md:w-1/2 lg:w-1/4 px-4">
          <div class="wow fadeInUp group shadow-testimonial mb-8 rounded-xl bg-white px-5 pt-12 pb-10" data-wow-delay=".1s">
            <div class="wow fadeInUp mb-8 flex h-[120px] w-[120px] items-center justify-center rounded-md bg-primary bg-opacity-10 text-primary mx-auto" data-wow-delay=".15s">
              <svg width="36" height="36" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M18 15C20.4853 15 22.5 12.9853 22.5 10.5C22.5 8.01472 20.4853 6 18 6C15.5147 6 13.5 8.01472 13.5 10.5C13.5 12.9853 15.5147 15 18 15Z" fill="currentColor"/>
                <path d="M18 18C12.4772 18 8 22.4772 8 28H28C28 22.4772 23.5228 18 18 18Z" fill="currentColor"/>
              </svg>
            </div>
            <div class="wow fadeInUp text-center" data-wow-delay=".2s">
              <h4 class="mb-1 text-lg font-semibold text-dark">
                {member.name}
              </h4>
              <p class="text-body-color mb-5 text-sm">
                {member.position}
              </p>
              <div class="flex items-center justify-center space-x-3">
                {member.socialLinks?.map((link) => (
                  <a
                    href={link.url}
                    class="flex h-9 w-9 items-center justify-center rounded-md border border-[#E5E7EB] text-body-color hover:border-primary hover:bg-primary hover:text-white"
                  >
                    <svg width="4" height="4" viewBox="0 0 4 4" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M3.5 0.5L0.5 3.5M0.5 0.5L3.5 3.5" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>