---
export interface Props {
  title: string;
  subtitle: string;
  description: string;
  image: string;
  className?: string;
}

const { title, subtitle, description, image, className = "" } = Astro.props;
---

<section
  class="bg-gray-1 pt-20 pb-8 lg:pt-[120px] lg:pb-[70px]"
>
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap items-center -mx-4">
      <div class="w-full px-4 lg:w-1/2">
        <div class="wow fadeInUp" data-wow-delay=".2s">
          <h2
            class="mb-5 text-3xl font-bold leading-tight text-dark sm:text-[40px] sm:leading-[1.2]">
            {title}
          </h2>
          <p class="mb-10 text-base leading-relaxed text-body-color">
            {description}
          </p>
          <div class="text-base font-medium text-body-color" set:html={subtitle}></div>
        </div>
      </div>
      <div class="w-full px-4 lg:w-1/2">
        <div class="wow fadeInUp" data-wow-delay=".35s">
          <div class="relative z-10 mx-auto max-w-[500px] lg:mr-0">
            <img
              src={image}
              alt="about image"
              class="mx-auto lg:ml-auto"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
