---
export interface Props {
  title?: string;
  clients: Array<{
    name: string;
    logo: string;
    logoDark?: string;
  }>;
  className?: string;
}

const { title, clients, className = "" } = Astro.props;
---

<section class="pb-20">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap -mx-4">
      <div class="w-full px-4">
        {title && <h2 class="mb-4 text-3xl font-bold text-dark sm:text-4xl md:text-[40px] md:leading-[1.2] gradient-title">{title}</h2>}
        
        <div class="flex flex-wrap items-center justify-center">
          {clients.map((client) => (
            <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-4 mb-8">
              <div class="flex items-center justify-center">
                <img
                  src={client.logo}
                  alt={client.name}
                  class="h-12 opacity-60 hover:opacity-100 transition-opacity duration-300"
                />
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>