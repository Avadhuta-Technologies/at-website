---
export interface Props {
  title: string;
  subtitle: string;
  features: Array<{
    title: string;
    description: string;
    ref: string;
    refTitle: string;
  }>;
  className?: string;
}

const { title, subtitle, features, className = "" } = Astro.props;
---

<section class="pt-20 pb-8 lg:pt-[120px] lg:pb-[70px]">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap -mx-4">
      <div class="w-full px-4">
        <div class="mx-auto max-w-[800px] text-center mb-20">
          <h2 class="mb-3 text-3xl font-bold text-dark sm:text-4xl md:text-[40px] md:leading-[1.2] gradient-title">{title}</h2>
          <div class="text-base text-body-color" set:html={subtitle}></div>
        </div>
      </div>
    </div>

    <div class="flex flex-wrap -mx-4">
      {features.map((feature, index) => (
        <div class="w-full md:w-1/2 lg:w-1/3 px-4">
          <div class="wow fadeInUp group mb-12" data-wow-delay=".1s">
            <div class="wow fadeInUp mb-8 flex h-[70px] w-[70px] items-center justify-center rounded-md bg-primary bg-opacity-10 text-primary" data-wow-delay=".15s">
              <svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M14 10.5C16.4853 10.5 18.5 8.48528 18.5 6C18.5 3.51472 16.4853 1.5 14 1.5C11.5147 1.5 9.5 3.51472 9.5 6C9.5 8.48528 11.5147 10.5 14 10.5Z" fill="currentColor"/>
                <path d="M14 13.5C8.47715 13.5 4 17.9772 4 23.5H24C24 17.9772 19.5228 13.5 14 13.5Z" fill="currentColor"/>
              </svg>
            </div>
            <h4 class="mb-3 text-xl font-bold text-dark">{feature.title}</h4>
            <p class="mb-8 text-body-color lg:mb-9" set:html={feature.description}></p>
            <a href={feature.ref} class="text-base font-medium text-dark hover:text-primary">{feature.refTitle}</a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>