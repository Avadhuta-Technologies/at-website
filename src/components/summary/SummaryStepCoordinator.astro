    async initializeStep1() {
      console.log('üîç [initializeStep1] Starting initialization...');

      // Get cart data from localStorage (single source of truth)
      let cart = [];
      let selectedPod = null;

      try {
        // Try this.summaryShared.getCart() first
        cart = await this.summaryShared.getCart();
        console.log('üîç [initializeStep1] Cart from this.summaryShared.getCart():', cart);
        selectedPod = cart.find((item) => item.type === 'pod');
        console.log(
          'üîç [initializeStep1] Selected pod from this.summaryShared.getCart():',
          selectedPod
        );
      } catch (error) {
        console.error('üîç [initializeStep1] Error with this.summaryShared.getCart():', error);
      }

      // Fallback: Direct localStorage check
      if (!selectedPod) {
        try {
          const localStorageCart = localStorage.getItem('novapod-cart');
          console.log('üîç [initializeStep1] Direct localStorage value:', localStorageCart);

          if (localStorageCart) {
            const parsedCart = JSON.parse(localStorageCart);
            console.log('üîç [initializeStep1] Parsed localStorage cart:', parsedCart);
            selectedPod = parsedCart.find((item) => item.type === 'pod');
            console.log('üîç [initializeStep1] Selected pod from direct localStorage:', selectedPod);
          }
        } catch (error) {
          console.error('üîç [initializeStep1] Error reading direct localStorage:', error);
        }
      }

      if (selectedPod) {
        // Show selected pod
        console.log('üîç [initializeStep1] Showing selected pod:', selectedPod);
        await this.showSelectedPod(selectedPod);
      } else {
        // Show available pods
        console.log('üîç [initializeStep1] No pod found, showing available pods');
        await this.showAvailablePods();
      }

      this.addStep1EventListeners();
      console.log('üîç [initializeStep1] Initialization complete');
    }

    async initializeStep2() {
      console.log('üîç [initializeStep2] Starting initialization...');

