    async initializeStep1() {
      console.log('üîç [initializeStep1] Starting initialization...');
      
      // Get cart data from localStorage (single source of truth)
      let cart = [];
      let selectedPod = null;
      
      try {
        // Try this.summaryShared.getCart() first
        cart = await this.summaryShared.getCart();
        console.log('üîç [initializeStep1] Cart from this.summaryShared.getCart():', cart);
        selectedPod = cart.find(item => item.type === 'pod');
        console.log('üîç [initializeStep1] Selected pod from this.summaryShared.getCart():', selectedPod);
      } catch (error) {
        console.error('üîç [initializeStep1] Error with this.summaryShared.getCart():', error);
      }
      
      // Fallback: Direct localStorage check
      if (!selectedPod) {
        try {
          const localStorageCart = localStorage.getItem('novapod-cart');
          console.log('üîç [initializeStep1] Direct localStorage value:', localStorageCart);
          
          if (localStorageCart) {
            const parsedCart = JSON.parse(localStorageCart);
            console.log('üîç [initializeStep1] Parsed localStorage cart:', parsedCart);
            selectedPod = parsedCart.find(item => item.type === 'pod');
            console.log('üîç [initializeStep1] Selected pod from direct localStorage:', selectedPod);
          }
        } catch (error) {
          console.error('üîç [initializeStep1] Error reading direct localStorage:', error);
        }
      }
      
      if (selectedPod) {
        // Show selected pod
        console.log('üîç [initializeStep1] Showing selected pod:', selectedPod);
        await this.showSelectedPod(selectedPod);
      } else {
        // Show available pods
        console.log('üîç [initializeStep1] No pod found, showing available pods');
        await this.showAvailablePods();
      }
      
      this.addStep1EventListeners();
      console.log('üîç [initializeStep1] Initialization complete');
    }

    async initializeStep2() {
      console.log('üîç [initializeStep2] Starting initialization...');
      
      // Get cart data from localStorage (single source of truth)
      const cart = await this.summaryShared.getCart();
      const selectedPod = cart.find(item => item.type === 'pod');
      console.log('üîç [initializeStep2] Cart from localStorage:', cart);
      console.log('üîç [initializeStep2] Selected pod:', selectedPod);
      console.log('üîç [initializeStep2] Selected pod reservationMonths:', selectedPod?.reservationMonths);
      
      if (selectedPod) {
        // Update the pod summary display
        console.log('üîç [initializeStep2] Calling updatePodSummary...');
        await this.updatePodSummary(selectedPod);
        
        // Update pricing based on current reservation period
        const currentMonths = selectedPod.reservationMonths || 3;
        console.log('üîç [initializeStep2] Updating pricing for', currentMonths, 'months');
        await this.updatePricingForReservationPeriod(currentMonths);
        
        // Load packs for the selected pod
        await this.loadPacksForStep2(selectedPod);
        // Update selected packs display
        await this.updateSelectedPacksDisplay();
      } else {
        console.log('üîç [initializeStep2] No pod found, redirecting to Step 1');
        this.summaryShared.showNotification('Please select a NovaPod first to proceed', 'warning');
        // Navigate back to Step 1
        this.summaryShared.navigateToStep(1);
        return;
      }
      
      this.addStep2EventListeners();
      console.log('üîç [initializeStep2] Initialization complete');
    }

    async initializeStep3() {
      console.log('üîç Initializing Step 3...');
      const cart = await this.summaryShared.getCart();
      const selectedPod = cart.find(item => item.type === 'pod');
      const selectedPacks = cart.filter(item => item.type === 'pack');
      
      console.log('üîç Step 3 - Selected pod:', selectedPod);
      console.log('üîç Step 3 - Selected packs:', selectedPacks);
      
      if (selectedPod) {
        await this.updateFinalSummary(selectedPod, selectedPacks);
      } else {
        console.log('üîç [initializeStep3] No pod found, redirecting to Step 1');
        this.summaryShared.showNotification('Please select a NovaPod first to proceed', 'warning');
        // Navigate back to Step 1
        this.summaryShared.navigateToStep(1);
        return;
      }
      
      this.addStep3EventListeners();
      console.log('üîç Step 3 initialization complete');
    }

    async showSelectedPod(podItem) {
      const step1Content = document.getElementById('step-1-content');
      
      if (step1Content) {
        // Replace the entire step 1 content with selected pod display
        step1Content.innerHTML = `
          <div class="text-center mb-12">
            <h2 class="text-3xl lg:text-4xl font-bold text-graphite-900 mb-4 gradient-title">
              Your Selected NovaPod
