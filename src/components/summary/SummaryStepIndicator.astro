---
// Simple Step Indicator Component
---

<div class="text-center mb-8">
  <div class="inline-flex items-center space-x-2 bg-white rounded-full px-4 py-2 shadow-lg border border-gray-100">
    <span class="text-sm font-medium text-graphite-700">Step</span>
    <span id="current-step-number" class="text-lg font-bold text-mint-600">1</span>
    <span class="text-sm font-medium text-graphite-700">of 3</span>
  </div>
</div>

<script>
  class SummaryStepIndicator {
    constructor() {
      this.init();
    }

    init() {
      // Listen for step changes
      window.addEventListener('step-changed', (e) => {
        this.updateStepNumber(e.detail.step);
      });

      // Initialize with step 1
      this.updateStepNumber(1);
    }

    updateStepNumber(step) {
      const stepNumberEl = document.getElementById('current-step-number');
      if (stepNumberEl) {
        stepNumberEl.textContent = step.toString();
        stepNumberEl.classList.add('animate-pulse');
        setTimeout(() => {
          stepNumberEl.classList.remove('animate-pulse');
        }, 1000);
      }
    }
  }

  // Initialize when DOM is ready
  document.addEventListener('DOMContentLoaded', () => {
    new SummaryStepIndicator();
  });
</script>

<style>
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
</style> 