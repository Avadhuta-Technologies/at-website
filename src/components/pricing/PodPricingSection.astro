---
export interface Props {
  data: {
    title: string;
    pods: Array<{
      id: string;
      title: string;
      price: string;
      priceUSD: string;
      teamMembers: string[];
      buttonColor: string;
      hoverColor: string;
    }>;
  };
}

const { data } = Astro.props;
---

<section class="py-16 bg-gradient-to-br from-gray-50 to-blue-50 dark:from-dark-2 dark:to-dark-3">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Pod Pricing -->
      <div class="mb-12">
        <h2 class="text-3xl font-bold text-dark dark:text-white mb-8 text-center">{data.title}</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {data.pods.map((pod) => (
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 border-2 border-transparent hover:border-blue-500 transition-all duration-300">
              <div class="text-center mb-6">
                <h3 class="text-xl font-bold text-dark dark:text-white mb-2">{pod.title}</h3>
                <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">{pod.price}</div>
                <p class="text-sm text-gray-600 dark:text-gray-400">{pod.priceUSD}</p>
              </div>
              <ul class="space-y-3 mb-6">
                {pod.teamMembers.map((member) => (
                  <li class="flex items-start text-sm">
                    <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-gray-600 dark:text-gray-400">{member}</span>
                  </li>
                ))}
              </ul>
              <button 
                data-add-to-cart
                data-item-id={pod.id}
                data-item-type="pod"
                data-item-title={pod.title}
                data-item-description={`Your Dedicated Team for ${pod.title}`}
                data-item-price={pod.price}
                class={`w-full bg-gradient-to-r ${pod.buttonColor} text-white font-semibold py-3 px-6 rounded-lg hover:${pod.hoverColor} transition-all duration-300`}>
                Add to Cart
              </button>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section> 