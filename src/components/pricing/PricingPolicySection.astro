---
export interface Props {
  data: {
    title: string;
    whatsIncluded: {
      title: string;
      items: string[];
    };
    billingPayment: {
      title: string;
      items: string[];
    };
  };
}

const { data } = Astro.props;
---

<section class="py-16 bg-gradient-to-br from-gray-50 to-blue-50 dark:from-dark-2 dark:to-dark-3">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Pricing Policy -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 mb-12">
        <h2 class="text-2xl font-bold text-dark dark:text-white mb-6">{data.title}</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">{data.whatsIncluded.title}</h3>
            <ul class="space-y-3">
              {data.whatsIncluded.items.map((item) => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-600 dark:text-gray-400">{item}</span>
                </li>
              ))}
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">{data.billingPayment.title}</h3>
            <ul class="space-y-3">
              {data.billingPayment.items.map((item) => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-600 dark:text-gray-400">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 