---
export interface Props {
  data: {
    title: string;
    subtitle: string;
    steps: Array<{
      number: string;
      title: string;
      description: string;
      icon: string;
      timeframe: string;
    }>;
    contactInfo: {
      title: string;
      description: string;
      email: string;
      phone: string;
      responseTime: string;
    };
  };
}

const { data } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-dark  mb-4 gradient-title">{data.title}</h2>
      <p class="text-lg text-gray-600 ">{data.subtitle}</p>
    </div>
    
    <div class="max-w-4xl mx-auto">
      <!-- Steps Timeline -->
      <div class="relative mb-12">
        <div class="absolute left-8 top-0 bottom-0 w-0.5 bg-gradient-to-b from-[#22c55e] to-[#0ea5e9]"></div>
        
        <div class="space-y-8">
          {data.steps.map((step, index) => (
            <div class="relative flex items-start">
              <div class="absolute left-6 w-4 h-4 bg-gradient-to-r from-[#22c55e] to-[#0ea5e9] rounded-full border-4 border-white transform -translate-x-2"></div>
              <div class="ml-12 flex-1">
                <div class="flex items-center mb-2">
                  <span class="text-2xl mr-3">{step.icon}</span>
                  <h3 class="text-xl font-bold text-dark ">{step.title}</h3>
                  <span class="ml-auto px-3 py-1 bg-blue-100  text-blue-800 ext-sm font-medium rounded-full">
                    {step.timeframe}
                  </span>
                </div>
                <p class="text-gray-600 ">{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Contact Information -->
      <div class="bg-gradient-to-r from-[#22c55e]/50 to-[#0ea5e9]/50 rounded-2xl p-8">
        <div class="text-center mb-6">
          <h3 class="text-2xl font-bold text-dark  mb-2">{data.contactInfo.title}</h3>
          <p class="text-gray-600 ">{data.contactInfo.description}</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="text-center">
            <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-dark  mb-1">Email Support</h4>
            <a href={`mailto:${data.contactInfo.email}`} class="text-blue-600  hover:underline">
              {data.contactInfo.email}
            </a>
          </div>
          
          <div class="text-center">
            <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-green-600 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <h4 class="font-semibold text-dark  mb-1">Phone Support</h4>
            <a href={`tel:${data.contactInfo.phone}`} class="text-green-600 hover:underline">
              {data.contactInfo.phone}
            </a>
          </div>
        </div>
        
        <div class="text-center mt-6">
          <p class="text-sm text-gray-600 ">{data.contactInfo.responseTime}</p>
        </div>
      </div>
    </div>
  </div>
</section> 