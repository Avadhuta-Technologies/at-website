---
export interface Props {
  data: {
    title: string;
    subtitle: string;
    description: string;
    benefits: Array<{
      title: string;
      items: string[];
    }>;
    engagement: string;
    priceNote: string;
  };
  className?: string;
}

const { data, className = "" } = Astro.props;
---

<section class={`py-20 bg-gradient-to-br from-purple-50 via-pink-50 to-blue-50 ${className}`}>
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-dark gradient-title">
        {data.title}
      </h2>
      <p class="text-xl md:text-2xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
        {data.subtitle}
      </p>
    </div>

    <div class="max-w-6xl mx-auto">
      <div class="relative bg-white rounded-3xl shadow-2xl overflow-hidden">
        <!-- Background Elements -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-purple-100 to-pink-100 rounded-full opacity-20 blur-3xl transform translate-x-32 -translate-y-32"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 bg-gradient-to-br from-blue-100 to-purple-100 rounded-full opacity-20 blur-3xl transform -translate-x-24 translate-y-24"></div>
        
        <div class="relative z-10 p-8 md:p-12">
          <div class="text-center mb-12">
            <p class="text-lg text-gray-600 leading-relaxed mb-6">
              {data.description}
            </p>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
            {data.benefits.map((benefit, index) => (
              <div class="benefit-card">
                <h3 class="font-bold text-xl mb-4 text-dark flex items-center">
                  <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-pink-600 rounded-lg flex items-center justify-center mr-3">
                    <span class="text-white font-bold text-sm">{index + 1}</span>
                  </div>
                  {benefit.title}
                </h3>
                <ul class="space-y-3">
                  {benefit.items.map((item) => (
                    <li class="flex items-start text-gray-600">
                      <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      {item}
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>

          <!-- Pricing Section -->
          <div class="mb-8 p-6 bg-gradient-to-r from-purple-50 to-pink-50 rounded-2xl border border-purple-200">
            <h3 class="font-bold text-xl mb-4 text-dark">Pricing</h3>
            <div class="flex items-baseline gap-2 mb-2">
              <div class="font-bold text-3xl text-dark">{data.engagement}</div>
            </div>
            <div class="font-semibold text-gray-600">{data.priceNote}</div>
          </div>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="w-full text-center py-4 px-8 border-2 border-purple-500 text-purple-600 hover:bg-purple-50 font-semibold rounded-xl transition-all duration-300 transform hover:scale-105">
              Get Custom Quote
            </a>
            <a href="/explore-pods" class="w-full text-center py-4 px-8 bg-gradient-to-r from-purple-600 to-pink-600 text-white hover:from-purple-700 hover:to-pink-700 font-semibold rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg">
              Explore Standard Pods
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 