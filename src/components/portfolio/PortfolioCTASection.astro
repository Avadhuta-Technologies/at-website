---
import { portfolioCTAData } from '../../content/portfolio/_cta.js';

interface Props {
  data?: typeof portfolioCTAData;
  className?: string;
}

const { data = portfolioCTAData, className = "" } = Astro.props;
---

<section class={`py-20 bg-gray-900 ${className}`}>
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      
      <!-- Main Headline -->
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6 leading-tight">
        {data.title}
      </h2>
      
      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-gray-300 mb-8 leading-relaxed max-w-3xl mx-auto">
        {data.description}
      </p>
      
      <!-- Benefits Grid -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12 max-w-3xl mx-auto">
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
          <div class="flex items-center justify-center mb-2">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <div class="text-sm font-medium text-white">Custom Solutions</div>
        </div>
        
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
          <div class="flex items-center justify-center mb-2">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <div class="text-sm font-medium text-white">Expert Team</div>
        </div>
        
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
          <div class="flex items-center justify-center mb-2">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <div class="text-sm font-medium text-white">Proven Results</div>
        </div>
        
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
          <div class="flex items-center justify-center mb-2">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <div class="text-sm font-medium text-white">Ongoing Support</div>
        </div>
      </div>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a 
          href={`mailto:${data.email}`}
          class="inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors duration-200 group"
        >
          <span>{data.buttonText}</span>
          <svg class="w-6 h-6 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        
        <a 
          href="/contact"
          class="inline-flex items-center px-8 py-4 bg-white text-gray-900 font-semibold rounded-xl hover:bg-gray-100 transition-colors duration-200 group"
        >
          <span>View More Work</span>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
      
      <!-- Contact Information -->
      <div class="bg-white/5 backdrop-blur-sm rounded-xl p-6 border border-white/10 max-w-md mx-auto">
        <div class="text-gray-300 mb-3 flex items-center justify-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          Or reach us directly at:
        </div>
        <div class="space-y-2">
          <a 
            href={`mailto:${data.email}`}
            class="block text-blue-300 hover:text-blue-200 font-medium transition-colors duration-300"
          >
            {data.email}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .portfolio-cta-section {
    @apply py-20 bg-gradient-to-r from-blue-600 to-purple-600;
  }
  
  .portfolio-cta-container {
    @apply container mx-auto px-4;
    max-width: 800px;
  }
  
  .portfolio-cta-content {
    @apply text-center;
  }
  
  .portfolio-cta-title {
    @apply text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6;
    line-height: 1.2;
  }
  
  .portfolio-cta-description {
    @apply text-lg md:text-xl text-blue-100 mb-8 max-w-2xl mx-auto;
    line-height: 1.6;
  }
  
  .portfolio-cta-actions {
    @apply flex justify-center;
  }
  
  .portfolio-cta-button {
    @apply inline-flex items-center px-8 py-4 bg-white text-blue-600 font-semibold rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300;
  }
  
  .portfolio-cta-button:hover {
    @apply bg-gray-50;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .portfolio-cta-title {
      @apply text-2xl md:text-3xl;
    }
    
    .portfolio-cta-description {
      @apply text-base md:text-lg;
    }
    
    .portfolio-cta-button {
      @apply px-6 py-3 text-sm;
    }
  }
</style>

<script>
  // Component-specific animations
  import { initScrollAnimations } from '../../scripts/scrollAnimations.js';
  
  // Initialize scroll animations for this component
  document.addEventListener('DOMContentLoaded', () => {
    initScrollAnimations();
  });
</script> 