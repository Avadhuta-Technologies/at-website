---
import { portfolioCTAData } from '../../content/portfolio/_cta.js';

interface Props {
  data?: typeof portfolioCTAData;
  className?: string;
}

const { data = portfolioCTAData, className = "" } = Astro.props;
---

<section class={`portfolio-cta-section ${className}`}>
  <div class="portfolio-cta-container">
    <div class="portfolio-cta-content">
      <h2 class="portfolio-cta-title">{data.title}</h2>
      <p class="portfolio-cta-description">{data.description}</p>
      
      <div class="portfolio-cta-actions">
        <a href={`mailto:${data.email}`} class="portfolio-cta-button">
          {data.buttonText}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .portfolio-cta-section {
    @apply py-20 bg-gradient-to-r from-blue-600 to-purple-600;
  }
  
  .portfolio-cta-container {
    @apply container mx-auto px-4;
    max-width: 800px;
  }
  
  .portfolio-cta-content {
    @apply text-center;
  }
  
  .portfolio-cta-title {
    @apply text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6;
    line-height: 1.2;
  }
  
  .portfolio-cta-description {
    @apply text-lg md:text-xl text-blue-100 mb-8 max-w-2xl mx-auto;
    line-height: 1.6;
  }
  
  .portfolio-cta-actions {
    @apply flex justify-center;
  }
  
  .portfolio-cta-button {
    @apply inline-flex items-center px-8 py-4 bg-white text-blue-600 font-semibold rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300;
  }
  
  .portfolio-cta-button:hover {
    @apply bg-gray-50;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .portfolio-cta-title {
      @apply text-2xl md:text-3xl;
    }
    
    .portfolio-cta-description {
      @apply text-base md:text-lg;
    }
    
    .portfolio-cta-button {
      @apply px-6 py-3 text-sm;
    }
  }
</style>

<script>
  // Component-specific animations
  import { initScrollAnimations } from '../../scripts/scrollAnimations.js';
  
  // Initialize scroll animations for this component
  document.addEventListener('DOMContentLoaded', () => {
    initScrollAnimations();
  });
</script> 