---
export interface Props {
  data: {
    title: string;
    subtitle: string;
    description?: string;
  };
}

const { data } = Astro.props;
---

<section class="relative bg-white overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-gray-50"></div>
  
  <!-- Decorative Elements -->
  <div class="absolute top-0 left-0 w-72 h-72 bg-primary-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-pulse"></div>
  <div class="absolute top-0 right-0 w-72 h-72 bg-purple-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-pulse animation-delay-2000"></div>
  
  <div class="relative z-10 container mx-auto px-4 py-20 md:py-32">
    <div class="max-w-4xl mx-auto text-center">
      
      <!-- Badge -->
      <div class="inline-flex items-center px-4 py-2 bg-primary-50 text-primary-700 text-sm font-semibold rounded-full mb-8 border border-primary-200">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        Pod Enhancement
      </div>
      
      <!-- Main Headline -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
        {data.title}
      </h1>
      
      <!-- Subtitle -->
      <h2 class="text-xl md:text-2xl text-gray-600 mb-8 leading-relaxed max-w-3xl mx-auto">
        {data.subtitle}
      </h2>
      
      <!-- Description (if provided) -->
      {data.description && (
        <p class="text-lg text-gray-500 mb-12 max-w-2xl mx-auto leading-relaxed">
          {data.description}
        </p>
      )}
      
    </div>
  </div>
</section>

<style>
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 0.7;
    }
    50% {
      opacity: 0.4;
    }
  }
  
  .animate-pulse {
    animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style> 