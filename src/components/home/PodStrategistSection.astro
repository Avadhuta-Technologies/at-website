---
import { podStrategistData } from '../../content/home/_podStrategist.js';

export interface Props {
  data?: any;
  className?: string;
}

const { data = podStrategistData, className = "" } = Astro.props;
---

<section class="py-12 bg-gradient-to-br from-blue-50 to-purple-50">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-6 text-gray-900 gradient-title">
        {data.title}
      </h2>
      
      <p class="text-lg text-gray-600 mb-8 leading-relaxed">
        {data.subtitle}
      </p>
      
      <div class="bg-white rounded-2xl shadow-lg p-8 border border-gray-100">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="text-left">
            <h3 class="text-xl font-bold text-gray-900 mb-4">
              {data.leftColumn.title}
            </h3>
            <p class="text-gray-600 mb-6">
              {data.leftColumn.description}
            </p>
            <ul class="space-y-3">
              {data.leftColumn.benefits.map((benefit) => (
                <li class="flex items-center text-gray-600">
                  <svg class="w-5 h-5 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
          
          <div class="text-left">
            <h3 class="text-xl font-bold text-gray-900 mb-4">
              {data.rightColumn.title}
            </h3>
            <p class="text-gray-600 mb-6">
              {data.rightColumn.description}
            </p>
            <ul class="space-y-3">
              {data.rightColumn.benefits.map((benefit) => (
                <li class="flex items-center text-gray-600">
                  <svg class="w-5 h-5 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
        </div>
        
        <div class="mt-8 pt-8 border-t border-gray-100">
          <a href={data.cta.url} class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 shadow-lg">
            {data.cta.text}
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section> 