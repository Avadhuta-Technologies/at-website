---
import { homeHowItWorksData } from '../../../content/home/_howItWorks.js';

interface Props {
  data?: typeof homeHowItWorksData;
  className?: string;
}

const { data = homeHowItWorksData, className = "" } = Astro.props;
---

<section class={`home-how-it-works-section ${className}`}>
  <div class="home-how-it-works-container">
    <div class="home-how-it-works-header">
      <h2 class="home-how-it-works-title">{data.title}</h2>
    </div>
    
    <div class="home-how-it-works-steps">
      {data.steps.map((step, index) => (
        <div class="home-how-it-works-step" data-step={index + 1}>
          <div class="home-how-it-works-step-number">
            <span class="home-how-it-works-step-number-text">{step.number}</span>
          </div>
          
          <div class="home-how-it-works-step-content">
            <h3 class="home-how-it-works-step-title">{step.title}</h3>
            <p class="home-how-it-works-step-description">
              {step.description.split('\n').map((paragraph, i) => (
                <span>
                  {paragraph}
                  {i < step.description.split('\n').length - 1 && <br />}
                </span>
              ))}
            </p>
          </div>
          
          {step.icon && (
            <div class="home-how-it-works-step-icon">
              <div class="home-how-it-works-icon-wrapper">
                <svg class="home-how-it-works-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  {step.icon === "choose-pod" && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  )}
                  {step.icon === "align-outcomes" && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  )}
                  {step.icon === "pod-working" && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  )}
                  {step.icon === "ship-scale" && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  )}
                </svg>
              </div>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .home-how-it-works-section {
    @apply py-20 bg-white dark:bg-gray-900;
  }
  
  .home-how-it-works-container {
    @apply container mx-auto px-4;
    max-width: 1200px;
  }
  
  .home-how-it-works-header {
    @apply text-center mb-16;
  }
  
  .home-how-it-works-title {
    @apply text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-4;
  }
  
  .home-how-it-works-steps {
    @apply grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8;
  }
  
  .home-how-it-works-step {
    @apply relative bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }
  
  .home-how-it-works-step-number {
    @apply absolute -top-4 -left-4 w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold text-lg;
  }
  
  .home-how-it-works-step-number-text {
    @apply font-bold;
  }
  
  .home-how-it-works-step-content {
    @apply mt-4;
  }
  
  .home-how-it-works-step-title {
    @apply text-xl font-bold text-gray-900 dark:text-white mb-4;
  }
  
  .home-how-it-works-step-description {
    @apply text-gray-600 dark:text-gray-300 leading-relaxed;
    white-space: pre-line;
  }
  
  .home-how-it-works-step-icon {
    @apply mt-6 flex justify-center;
  }
  
  .home-how-it-works-icon-wrapper {
    @apply w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center;
  }
  
  .home-how-it-works-icon {
    @apply w-8 h-8 text-blue-600 dark:text-blue-400;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .home-how-it-works-steps {
      @apply grid-cols-1 gap-6;
    }
    
    .home-how-it-works-step {
      @apply p-6;
    }
    
    .home-how-it-works-title {
      @apply text-2xl md:text-3xl;
    }
  }
  
  /* Animation classes */
  .home-how-it-works-step {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  .home-how-it-works-step:nth-child(1) { animation-delay: 0.1s; }
  .home-how-it-works-step:nth-child(2) { animation-delay: 0.2s; }
  .home-how-it-works-step:nth-child(3) { animation-delay: 0.3s; }
  .home-how-it-works-step:nth-child(4) { animation-delay: 0.4s; }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Component-specific scroll animations
  import { initScrollAnimations } from '../../scripts/scrollAnimations.js';
  
  // Initialize scroll animations for this component
  document.addEventListener('DOMContentLoaded', () => {
    initScrollAnimations();
  });
</script> 