    align-items: center;
    padding-bottom: 0.375rem;
    border-bottom: 1px solid rgba(148, 163, 184, 0.2);
  }

  .section-header h4 {
    font-size: 0.875rem;
    font-weight: 600;
    color: #374151;
    margin: 0;
    font-family: 'Manrope', sans-serif;
  }

  .content-grid {
