---
export interface Props {
  item: {
    id?: string;
    title: string;
    engagement?: string;
    success?: string;
    client?: string;
    challenge?: string;
    outcome?: string[];
    testimonial?: {
      quote: string;
      author: string;
      role: string;
    };
    readMoreLink?: string;
    // Legacy format
    description?: string;
    metric?: string;
    metricLabel?: string;
  };
  index: number;
}

const { item, index } = Astro.props;

// Determine if it's case study format or legacy format
const isCaseStudyFormat = item.engagement && item.success && item.client && item.challenge;

// Generate navigation URL - use ID if available, otherwise fall back to readMoreLink
const navigationUrl = item.id ? `/case-studies/${item.id}` : (item.readMoreLink || '#');
---

<div class="success-story-card group relative overflow-hidden rounded-xl transition-all duration-300 hover:scale-105 hover:-translate-y-1 flex flex-col h-full cursor-pointer" data-case-study-id={item.id} data-navigation-url={navigationUrl}>
  <!-- Card Background - Solid color instead of gradient (matching brand guidelines) -->
  <div class="absolute inset-0 bg-white/90 backdrop-blur-sm border border-white/30 rounded-xl shadow-sm group-hover:shadow-xl transition-all duration-300"></div>
  
  <!-- Card Content -->
  <div class="relative p-6 flex flex-col h-full">
    {isCaseStudyFormat ? (
      // Case Study Format
      <>
        <!-- Header Section -->
        <div class="mb-6">
          <!-- Badges -->
          <div class="flex flex-wrap gap-2 mb-4">
            <span class="inline-flex items-center px-2.5 py-1 bg-cerulean-100 text-cerulean-700 text-xs font-inter font-medium rounded-full border border-cerulean-200">
              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              {item.engagement}
            </span>
            <span class="inline-flex items-center px-2.5 py-1 bg-mint-100 text-mint-700 text-xs font-inter font-medium rounded-full border border-mint-200">
              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              {item.success}
            </span>
          </div>
          
          <!-- Title - Primary Focus -->
          <h3 class="text-xl font-inter font-bold text-graphite-900 mb-4 group-hover:text-graphite-800 transition-colors duration-300 leading-tight">
            {item.title}
          </h3>
          
          <!-- Client & Challenge -->
          <div class="space-y-3">
            <div>
              <span class="text-xs font-inter font-normal text-graphite-500 uppercase tracking-wide">Client</span>
              <p class="text-graphite-700 font-inter font-semibold text-sm">{item.client}</p>
            </div>
            
            <div>
              <span class="text-xs font-inter font-normal text-graphite-500 uppercase tracking-wide">Challenge</span>
              <p class="text-graphite-700 font-inter font-normal text-sm">{item.challenge}</p>
            </div>
          </div>
        </div>
        
        <!-- Outcomes Section - Primary Focus -->
        <div class="mb-6">
          <div class="bg-graphite-50/80 rounded-lg p-4 border border-graphite-100/50 backdrop-blur-sm">
            <h4 class="text-sm font-inter font-semibold text-graphite-900 mb-3 flex items-center">
              <svg class="w-4 h-4 text-mint-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Outcome
            </h4>
            <div class="space-y-2">
              {item.outcome?.map((outcomeItem: string, itemIndex: number) => (
                <div class="flex items-start">
                  <svg class="w-3 h-3 text-mint-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-xs font-inter font-medium text-graphite-700 leading-relaxed">{outcomeItem}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
        
        <!-- Testimonial Section - Secondary Focus -->
        {item.testimonial && (
          <div class="mb-6">
            <div class="bg-mint-50/80 rounded-lg p-4 border border-mint-200/50 backdrop-blur-sm">
              <div class="relative">
                <svg class="w-4 h-4 text-mint-600 mb-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
                </svg>
                <blockquote class="text-graphite-700 font-inter font-medium italic mb-3 text-sm leading-relaxed">
                  {item.testimonial.quote}
                </blockquote>
                <div class="flex items-center">
                  <div class="w-6 h-6 bg-gradient-to-r from-mint-500 to-cerulean-500 rounded-full flex items-center justify-center text-white font-inter font-bold text-xs mr-2">
                    {item.testimonial.author.split(' ').map((n: string) => n[0]).join('')}
                  </div>
                  <div>
                    <div class="font-inter font-medium text-graphite-900 text-xs">{item.testimonial.author}</div>
                    <div class="text-xs font-inter font-normal text-graphite-500">{item.testimonial.role}</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        )}
        
        <!-- CTA Section - Secondary Focus -->
        <div class="mt-auto pt-4 border-t border-graphite-100/50">
          <a 
            href={navigationUrl}
            class="inline-flex items-center justify-center w-full px-4 py-2.5 text-graphite-600 hover:text-graphite-700 font-inter font-medium transition-colors "
          >
            <span class="text-sm">Read Case Study</span>
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </>
    ) : (
      // Legacy Stories Format
      <>
        <!-- Content Section -->
        <div class="flex-1 flex flex-col items-center justify-center text-center mb-6">
          <!-- Metric - Primary Focus -->
          <div class="text-3xl font-inter font-bold text-cerulean-600 mb-2">{item.metric}</div>
          <!-- Metric Label - Tertiary Focus -->
          <div class="text-xs font-inter font-normal text-graphite-500 mb-4">{item.metricLabel}</div>
          <!-- Title - Primary Focus -->
          <h3 class="text-xl font-inter font-bold text-graphite-900 mb-4 group-hover:text-graphite-800 transition-colors duration-300">
            {item.title}
          </h3>
          <!-- Description - Secondary Focus -->
          <p class="text-graphite-600 font-inter font-normal text-sm leading-relaxed">{item.description}</p>
        </div>
        
        <!-- CTA Section - Secondary Focus -->
        <div class="mt-auto pt-4 border-t border-graphite-100/50">
          <a 
            href="#"
            class="inline-flex items-center justify-center w-full px-4 py-2.5 text-graphite-600 hover:text-graphite-700 font-inter font-semibold transition-colors border border-graphite-200 rounded-lg hover:bg-graphite-50 shadow-sm hover:shadow-md"
          >
            <span class="text-sm">Learn More</span>
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </>
    )}
  </div>
</div>

<script>
  // Handle card click to navigate to case study detail page
  document.addEventListener('DOMContentLoaded', function() {
    const successStoryCards = document.querySelectorAll('.success-story-card');
    
    successStoryCards.forEach(card => {
      card.addEventListener('click', (e) => {
        // Prevent navigation if clicking on links or buttons inside the card
        const target = e.target as HTMLElement;
        if (target && (target.tagName === 'A' || target.tagName === 'BUTTON' || 
            target.closest && (target.closest('a') || target.closest('button')))) {
          return;
        }
        
        const navigationUrl = (e.currentTarget as HTMLElement).getAttribute('data-navigation-url');
        if (navigationUrl && navigationUrl !== '#') {
          window.location.href = navigationUrl;
        }
      });
    });
  });
</script>

<style>
  /* Success Story Card Animations */
  .success-story-card {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .success-story-card.animate {
    opacity: 1;
    transform: translateY(0);
  }

  /* Hover Effects */
  .success-story-card:hover {
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .success-story-card {
      padding: 1rem;
    }
  }
</style> 