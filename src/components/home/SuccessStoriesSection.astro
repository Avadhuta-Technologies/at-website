---
import { successStoriesData } from '../../content/home/_successStories.js';

export interface Props {
  data?: any;
  className?: string;
}

const { data = successStoriesData, className = "" } = Astro.props;
---

<section class="py-16 bg-gradient-to-br from-blue-50 to-green-50">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-gray-900 gradient-title">
        {data.title}
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
        {data.subtitle}
      </p>
    </div>

    <!-- Success Stories Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {data.stories.map((story, index) => (
        <div class="bg-white rounded-2xl shadow-lg p-8 flex flex-col h-full transition-transform duration-300 hover:-translate-y-2 group border border-gray-100 hover-lift">
          <!-- Story Header -->
          <div class="flex items-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-[#22c55e] to-[#0ea5e9] rounded-2xl flex items-center justify-center mr-4 group-hover:scale-110 transition-transform duration-300">
              <img src={story.icon} alt={story.title} class="w-8 h-8 filter brightness-0 invert" />
            </div>
            <div>
              <h3 class="font-bold text-xl text-gray-900 mb-1">
                {story.title}
              </h3>
              <p class="text-sm text-gray-500">
                {story.industry}
              </p>
            </div>
          </div>

          <!-- Story Content -->
          <div class="flex-1">
            <p class="text-gray-600 mb-6 leading-relaxed">
              {story.description}
            </p>

            <!-- Key Results -->
            <div class="bg-gray-50 rounded-xl p-4 mb-6 flex-1">
              <h4 class="font-semibold text-gray-900 mb-3">Key Results:</h4>
              <ul class="space-y-2">
                {story.results.map((result) => (
                  <li class="flex items-center text-gray-600">
                    <svg class="w-4 h-4 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    {result}
                  </li>
                ))}
              </ul>
            </div>

            <!-- Technologies Used -->
            <div class="mb-6">
              <h4 class="font-semibold text-gray-900 mb-3">Technologies:</h4>
              <div class="flex flex-wrap gap-2">
                {story.technologies.map((tech) => (
                  <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </div>

          <!-- CTA Button -->
          <div class="mt-auto">
            <a href={story.cta.url} class="inline-flex items-center justify-center w-full px-6 py-3 bg-gradient-to-r from-[#22c55e] to-[#0ea5e9] text-white font-semibold rounded-xl hover:from-[#16a34a] hover:to-[#0284c7] transition-all duration-300 transform hover:scale-105 shadow-lg">
              {story.cta.text}
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 