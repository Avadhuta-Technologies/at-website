---
import { builtForData } from '../../content/home/_builtFor.js';

export interface Props {
  data?: any;
  className?: string;
}

const { data = builtForData, className = "" } = Astro.props;
---

<section class="py-16 bg-gradient-to-br from-slate-50 to-gray-50 w-full relative overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-blue-100 rounded-full opacity-20 blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-green-100 rounded-full opacity-20 blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-purple-100 rounded-full opacity-10 blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-gray-900">
        {data.title}
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
        {data.subtitle}
      </p>
    </div>

    <!-- Audience Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {data.audiences.map((audience, index) => (
        <div class="audience-card group relative bg-white rounded-2xl shadow-lg hover:shadow-2xl overflow-hidden border border-gray-100 transition-all duration-500 hover:-translate-y-2 hover-lift">
          <!-- Card Header -->
          <div class="p-8">
            <div class="flex items-center mb-6">
              <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center mr-4 group-hover:scale-110 transition-transform duration-300">
                <img src={audience.icon} alt={audience.title} class="w-8 h-8 filter brightness-0 invert" />
              </div>
              <div>
                <h3 class="font-bold text-xl mb-3 text-dark group-hover:text-blue-600 transition-colors duration-300">
                  {audience.title}
                </h3>
                <p class="text-gray-600 text-sm">
                  {audience.subtitle}
                </p>
              </div>
            </div>

            <!-- Card Content -->
            <p class="text-gray-600 mb-6 leading-relaxed">
              {audience.description}
            </p>

            <!-- Features List -->
            <ul class="space-y-3 mb-8">
              {audience.features.map((feature) => (
                <li class="flex items-center text-gray-600">
                  <svg class="w-5 h-5 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>

            <!-- CTA Button -->
            <a href={audience.cta.url} class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105">
              {audience.cta.text}
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>

          <!-- Decorative Elements -->
          <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-blue-100 to-purple-100 rounded-bl-full opacity-20 group-hover:opacity-30 transition-opacity duration-300"></div>
          <div class="absolute bottom-0 left-0 w-16 h-16 bg-gradient-to-br from-green-100 to-blue-100 rounded-tr-full opacity-20 group-hover:opacity-30 transition-opacity duration-300"></div>
        </div>
      ))}
    </div>
  </div>
</section>