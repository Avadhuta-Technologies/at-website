---
export interface Props {
  data: {
    title: string;
    subtitle: string;
    description: string;
    primaryButton: {
      text: string;
      url: string;
    };
    secondaryButton: {
      text: string;
      url: string;
    };
    contactInfo?: {
      email1: string;
    };
  };
}

const { data } = Astro.props;
---

<section class="py-12 bg-gray-900">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      
      <!-- Main Headline -->
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4 leading-tight gradient-title">
        {data.title}
      </h2>
      
      <!-- Subtitle -->
      <p class="text-lg md:text-xl text-gray-300 mb-6 leading-relaxed max-w-3xl mx-auto">
        {data.subtitle}
      </p>
      
      <!-- Benefits Grid -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-3 mb-8 max-w-3xl mx-auto">
        {data.description.split('âœ…').filter(item => item.trim()).map((benefit, index) => (
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-3 border border-white/20">
            <div class="flex items-center justify-center mb-1">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div class="text-xs font-medium text-white leading-tight">{benefit.trim()}</div>
          </div>
        ))}
      </div>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-3 justify-center mb-8">
        <a 
          href={data.primaryButton.url}
          class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors duration-200 group"
        >
          <span>{data.primaryButton.text}</span>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        
        <a 
          href={data.secondaryButton.url}
          class="inline-flex items-center px-6 py-3 bg-white text-gray-900 font-semibold rounded-xl hover:bg-gray-100 transition-colors duration-200 group"
        >
          <span>{data.secondaryButton.text}</span>
          <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
      
      <!-- Contact Information -->
      {data.contactInfo && (
        <div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 max-w-md mx-auto">
          <div class="text-gray-300 mb-2 flex items-center justify-center text-sm">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Or reach us directly at:
          </div>
          <div class="space-y-1">
            <a 
              href={`mailto:${data.contactInfo.email1}`}
              class="block text-blue-300 hover:text-blue-200 font-medium transition-colors duration-300 text-sm"
            >
              {data.contactInfo.email1}
            </a>
          </div>
        </div>
      )}
    </div>
  </div>
</section> 