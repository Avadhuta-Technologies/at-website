---
import { popularArticlesData } from '../content/home/_popularArticles.js';

export interface Props {
  data?: any;
  className?: string;
}

const { data = popularArticlesData, className = "" } = Astro.props;
---

<section class="pt-20 pb-10 lg:pt-[120px] lg:pb-20">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap -mx-4">
      <div class="w-full px-4">
        <div class="mx-auto max-w-[800px] text-center mb-20">
          <h2 class="mb-5 text-3xl font-bold text-dark sm:text-4xl md:text-[40px] md:leading-[1.2] gradient-title">
            {data.title}
          </h2>
          <p class="text-base text-body-color">
            {data.subtitle}
          </p>
        </div>
      </div>
    </div>

    <div class="flex flex-wrap -mx-4">
      {data.articles.map((article, index) => (
        <div class="w-full md:w-1/2 lg:w-1/3 px-4">
          <div class="wow fadeInUp group mb-8" data-wow-delay=".1s">
            <div class="wow fadeInUp mb-5 flex w-full items-center border-b border-stroke pb-5">
              <div class="mr-4 h-[60px] w-full max-w-[60px] overflow-hidden rounded">
                <img
                  src={article.image}
                  alt={article.title}
                  class="w-full"
                />
              </div>
              <div class="w-full">
                <h4>
                  <a
                    href={article.url}
                    class="mb-1 inline-block text-lg font-medium leading-snug text-dark hover:text-primary lg:text-base xl:text-lg"
                  >
                    {article.title}
                  </a>
                </h4>
                <p class="text-base text-body-color">
                  {article.excerpt}
                </p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>