---
export interface Props {
  data: {
    title: string;
    subtitle: string;
    description?: string;
  };
}

const { data } = Astro.props;
---

<section class="relative overflow-hidden">

  <div class="relative z-10 container mx-auto px-4 py-20 md:py-32">
    <div class="max-w-4xl mx-auto text-center">
      
      <!-- Badge -->
      <div class="inline-flex items-center px-4 py-2 bg-primary-50 text-primary-700 text-sm font-semibold rounded-full mb-8 border border-primary-200">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
        </svg>
        Packs
      </div>
      
      <!-- Main Headline -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold gradient-title mb-6 leading-tight">
        Add Power to Your Pod with Fixed-Scope
        <span class="gradient-text"> Packs</span>
      </h1>
      
      <!-- Subtitle -->
      <h2 class="text-xl md:text-2xl text-gray-600 mb-8 leading-relaxed max-w-3xl mx-auto">
        {data.subtitle}
      </h2>
      
      <!-- Description (if provided) -->
      {data.description && (
        <p class="text-lg text-gray-500 mb-12 max-w-2xl mx-auto leading-relaxed">
          {data.description}
        </p>
      )}
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="#packs-section" 
          class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors duration-200 group"
          onclick="scrollToSection(event, 'packs-section')"
        >
          <span>Browse Packs</span>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        
      </div>
      
    </div>
  </div>
</section>

<style>
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 0.7;
    }
    50% {
      opacity: 0.4;
    }
  }
  
  .animate-pulse {
    animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>

<script is:inline>
  function scrollToSection(event, sectionId) {
    event.preventDefault();
    const section = document.getElementById(sectionId);
    if (section) {
      section.scrollIntoView({
        behavior: 'smooth',
        block: 'start'
      });
    }
  }
</script> 