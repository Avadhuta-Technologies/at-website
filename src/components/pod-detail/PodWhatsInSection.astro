---
interface Props {
  whatsInPod: {
    description: string;
    teamComposition: string[];
    upgradeNote?: string;
  };
}

const { whatsInPod } = Astro.props;
---

<section class="py-20 relative overflow-hidden">
  <div class="container mx-auto max-w-screen-2xl px-4 relative z-10">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-inter font-bold text-graphite-900 mb-4">What's in the Pod?</h2>
      <p class="text-lg font-inter text-graphite-600 leading-relaxed mb-8">{whatsInPod.description}</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {whatsInPod.teamComposition.map((member: string, index: number) => (
        <div class="group relative overflow-hidden rounded-xl transition-all duration-300 hover:scale-105 hover:-translate-y-1">
          <!-- Card Background -->
          <div class="absolute inset-0 bg-white/90 backdrop-blur-sm border border-white/30 rounded-xl shadow-sm group-hover:shadow-xl transition-all duration-300"></div>
          
          <!-- Card Content -->
          <div class="relative p-6 flex items-start">
            <div class="w-12 h-12 bg-mint-100 rounded-lg flex items-center justify-center mr-4 flex-shrink-0 border border-mint-200 shadow-sm group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-mint-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <div>
              <p class="text-graphite-600 font-inter leading-relaxed">{member}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    {whatsInPod.upgradeNote && (
      <div class="max-w-4xl mx-auto mt-12">
        <div class="group relative overflow-hidden rounded-xl transition-all duration-300 hover:scale-105 hover:-translate-y-1">
          <!-- Card Background -->
          <div class="absolute inset-0 bg-cerulean-50/80 backdrop-blur-sm border border-cerulean-200/50 rounded-xl shadow-sm group-hover:shadow-xl transition-all duration-300"></div>
          
          <!-- Card Content -->
          {/* <div class="relative p-6 flex items-start">
            <div class="w-8 h-8 bg-cerulean-100 rounded-lg flex items-center justify-center mr-4 flex-shrink-0 border border-cerulean-200 shadow-sm group-hover:scale-110 transition-transform duration-300">
              <svg class="w-4 h-4 text-cerulean-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-inter font-semibold text-cerulean-900 mb-2">Upgrade Note</h3>
              <p class="text-cerulean-800 font-inter">{whatsInPod.upgradeNote}</p>
            </div>
          </div> */}
        </div>
      </div>
    )}
  </div>
</section> 