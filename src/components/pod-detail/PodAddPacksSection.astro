---
interface Props {
  relevantPacks: Array<{
    id: string;
    title: string;
    description: string;
    priceINR: string;
    priceUSD: string;
    duration: string;
    badge: string;
    badgeColor: string;
    deliverables: string[];
  }>;
}

const { relevantPacks } = Astro.props;
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Add Packs to Your Pod</h2>
      <p class="text-lg text-gray-600 leading-relaxed">Enhance your pod with specialized packs for additional features and capabilities</p>
    </div>
    
    <div class="max-w-6xl mx-auto">
      {relevantPacks.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          {relevantPacks.map((pack) => (
            <div class="bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-all duration-300 hover:-translate-y-1">
              <!-- Card Header -->
              <div class="p-6 border-b border-gray-100">
                <div class="flex items-start justify-between mb-4">
                  <div class="w-12 h-12 bg-primary-50 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    </svg>
                  </div>
                  <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                    pack.badgeColor === 'green' ? 'bg-green-100 text-green-800' :
                    pack.badgeColor === 'blue' ? 'bg-blue-100 text-blue-800' :
                    pack.badgeColor === 'purple' ? 'bg-purple-100 text-purple-800' :
                    pack.badgeColor === 'orange' ? 'bg-orange-100 text-orange-800' :
                    pack.badgeColor === 'indigo' ? 'bg-indigo-100 text-indigo-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {pack.badge}
                  </span>
                </div>
                
                <h3 class="text-xl font-semibold text-gray-900 mb-2">
                  {pack.title}
                </h3>
                
                <div class="flex items-baseline space-x-2 mb-3">
                  <span class="text-2xl font-bold text-gray-900">
                    {pack.priceINR}
                  </span>
                </div>
                
                <p class="text-sm text-gray-500 mb-4">
                  {pack.duration} â€¢ {pack.priceUSD}
                </p>
              </div>
              
              <!-- Card Body -->
              <div class="p-6">
                <p class="text-gray-600 mb-6 leading-relaxed">
                  {pack.description}
                </p>
                
                <!-- Features List -->
                <div class="space-y-3 mb-6">
                  {pack.deliverables.slice(0, 3).map((deliverable: string) => (
                    <div class="flex items-start">
                      <svg class="w-4 h-4 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      <span class="text-sm text-gray-600">{deliverable.split(' - ')[0]}</span>
                    </div>
                  ))}
                </div>
                
                <div class="flex items-center justify-between">
                  <!-- CTA Button -->
                  <button 
                    data-add-to-cart
                    data-item-id={pack.id}
                    data-item-type="pack"
                    data-item-title={pack.title}
                    data-item-description={pack.description}
                    data-item-price={pack.priceINR}
                    class="w-full mr-1 inline-flex items-center justify-center px-4 py-2 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors duration-200">
                    Add Pack
                  </button>
               
                  <a 
                    href={`/packs/${pack.id}`} 
                    class="w-full ml-1 inline-flex items-center justify-center px-4 py-2 bg-white border border-primary-600 text-primary-600 font-semibold rounded-lg hover:bg-primary-50 transition-colors duration-200"
                  >
                    View Details
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="bg-gray-50 rounded-2xl p-8 border border-gray-200 text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Explore All Packs</h3>
          <p class="text-gray-600 mb-6">Discover our full range of specialized packs</p>
          <a href="/explore-packs" class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors duration-200">
            Browse All Packs
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      )}
      
      <div class="text-center">
        <a href="/explore-packs" class="inline-flex items-center px-6 py-3 bg-gray-100 text-gray-700 font-semibold rounded-lg hover:bg-gray-200 transition-colors duration-200">
          View All Available Packs
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section> 