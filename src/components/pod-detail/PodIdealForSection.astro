---
interface Props {
  idealFor: string[];
}

const { idealFor } = Astro.props;
---

<section class="py-20 relative overflow-hidden" id="details">
  <div class="container mx-auto max-w-screen-2xl px-4 relative z-10">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-inter font-bold text-graphite-900 mb-4">Ideal For</h2>
      <p class="text-lg font-inter text-graphite-600 leading-relaxed">Perfect for teams and projects that need specialized expertise</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {idealFor.map((item: string, index: number) => (
        <div class="group relative overflow-hidden rounded-xl transition-all duration-300 hover:scale-105 hover:-translate-y-1">
          <!-- Card Background -->
          <div class="absolute inset-0 bg-white/90 backdrop-blur-sm border border-white/30 rounded-xl shadow-sm group-hover:shadow-xl transition-all duration-300"></div>
          
          <!-- Card Content -->
          <div class="relative p-6 flex items-start">
            <div class="w-10 h-10 bg-mint-100 rounded-lg flex items-center justify-center mr-4 flex-shrink-0 border border-mint-200 shadow-sm group-hover:scale-110 transition-transform duration-300">
              <span class="text-mint-600 font-inter font-bold text-lg">{index + 1}</span>
            </div>
            <div>
              <p class="text-graphite-800 font-inter leading-relaxed">{item}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 