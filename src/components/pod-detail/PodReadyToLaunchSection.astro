---
interface Props {
  pod: {
    id: string;
    name: string;
    tagline: string;
    pricing: string[];
    basePriceINR: number;
    basePriceUSD: number;
    discountPercentage: number;
  };
}

const { pod } = Astro.props;
---

<section class="py-20 bg-gray-900">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      
      <!-- Main Headline -->
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6 leading-tight gradient-title">
        Ready to Launch with This Pod?
      </h2>
      
      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-gray-300 mb-8 leading-relaxed max-w-3xl mx-auto">
        Start your project today and get your dedicated team of experts
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <button 
          id={`pod-ready-cta-${pod.id}`}
          data-add-to-cart
          data-item-id={pod.id}
          data-item-type="pod"
          data-item-title={pod.name}
          data-item-description={pod.tagline}
          data-item-price-inr={pod.basePriceINR}
          data-item-price-usd={pod.basePriceUSD}
          class="pod-ready-cta-btn inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors duration-200 group"
          data-action="add"
        >
          <span class="cta-text">Reserve Pod</span>
          <svg class="w-6 h-6 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </button>
        
        <a 
          href="/contact"
          class="inline-flex items-center px-8 py-4 bg-white text-gray-900 font-semibold rounded-xl hover:bg-gray-100 transition-colors duration-200 group"
        >
          <span>Book Discovery Call</span>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </a>
      </div>
      
      <!-- Contact Information -->
      <div class="bg-white/5 backdrop-blur-sm rounded-xl p-6 border border-white/10 max-w-md mx-auto">
        <div class="text-gray-300 mb-3 flex items-center justify-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          Or reach us directly at:
        </div>
        <div class="space-y-2">
          <a 
            href="mailto:hello@avadhutatech.com"
            class="block text-blue-300 hover:text-blue-200 font-medium transition-colors duration-300"
          >
            ðŸ“© hello@avadhutatech.com
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Get the current pod ID from the button's data attribute
  let currentPodId = '';
  
  // Function to get pod ID from button data attribute
  function getCurrentPodId() {
    const button = document.querySelector('.pod-ready-cta-btn');
    if (button) {
      return button.getAttribute('data-item-id') || '';
    }
    return '';
  }
  
  // Check localStorage and update CTA button accordingly
  document.addEventListener('DOMContentLoaded', function() {
    console.log('ðŸ”µ [PodReadyToLaunchSection] DOMContentLoaded - updating CTA button');
    
    // Get current pod ID from button data attribute
    currentPodId = getCurrentPodId();
    console.log('ðŸ”µ [PodReadyToLaunchSection] Current pod ID from button:', currentPodId);
    
    // Immediate check with localStorage
    try {
      const cart = JSON.parse(localStorage.getItem('novapod-cart') || '[]');
      const selectedPod = cart.find((item: any) => item.type === 'pod');
      console.log('ðŸ”µ [PodReadyToLaunchSection] Immediate localStorage check - cart:', cart);
      console.log('ðŸ”µ [PodReadyToLaunchSection] Immediate localStorage check - selectedPod:', selectedPod);
      console.log('ðŸ”µ [PodReadyToLaunchSection] Current pod ID:', currentPodId);
      
      if (selectedPod && selectedPod.id === currentPodId) {
        console.log('ðŸ”µ [PodReadyToLaunchSection] Pod is in cart - should show Remove Pod');
      } else {
        console.log('ðŸ”µ [PodReadyToLaunchSection] Pod is not in cart - should show Reserve Pod');
      }
    } catch (error) {
      console.error('ðŸ”µ [PodReadyToLaunchSection] Error in immediate localStorage check:', error);
    }
    
    setTimeout(() => {
      updatePodReadyCTA();
    }, 100);
  });

  // Listen for cart updates
  document.addEventListener('cart-updated', function() {
    console.log('ðŸ”µ [PodReadyToLaunchSection] Cart updated event received - updating CTA button');
    // Update current pod ID in case it changed
    currentPodId = getCurrentPodId();
    setTimeout(() => {
      updatePodReadyCTA();
    }, 100);
  });

  // Function to update pod ready CTA button based on cart state
  async function updatePodReadyCTA() {
    try {
      console.log('ðŸ”µ [PodReadyToLaunchSection] updatePodReadyCTA called');
      
      // Import the shared utility
      const { SummaryShared } = await import('../../utils/summaryShared.js');
      const shared = new SummaryShared();
      const cart = await shared.getCart();
      const selectedPod = cart.find((item: any) => item.type === 'pod');
      
      console.log('ðŸ”µ [PodReadyToLaunchSection] Current cart:', cart);
      console.log('ðŸ”µ [PodReadyToLaunchSection] Selected pod:', selectedPod);
      console.log('ðŸ”µ [PodReadyToLaunchSection] Current pod ID:', currentPodId);
      
      let button = document.querySelector('.pod-ready-cta-btn') as HTMLElement;
      console.log('ðŸ”µ [PodReadyToLaunchSection] Found button with .pod-ready-cta-btn:', button);
      
      // Update current pod ID before fallback selectors
      currentPodId = getCurrentPodId();
      
      // Fallback selectors if button not found
      if (!button) {
        button = document.querySelector(`[data-add-to-cart][data-item-id="${currentPodId}"]`) as HTMLElement;
        console.log('ðŸ”µ [PodReadyToLaunchSection] Found button with fallback selector:', button);
      }
      
      if (!button) {
        button = document.querySelector(`#pod-ready-cta-${currentPodId}`) as HTMLElement;
        console.log('ðŸ”µ [PodReadyToLaunchSection] Found button with ID selector:', button);
      }
      
      const ctaText = button?.querySelector('.cta-text');
      console.log('ðŸ”µ [PodReadyToLaunchSection] Found ctaText:', ctaText);
      
      if (button && ctaText) {
        console.log('ðŸ”µ [PodReadyToLaunchSection] Button and ctaText found - updating...');
        console.log('ðŸ”µ [PodReadyToLaunchSection] Current button text:', ctaText.textContent);
        console.log('ðŸ”µ [PodReadyToLaunchSection] Current button classes:', button.className);
        
        if (selectedPod && selectedPod.id === currentPodId) {
          // This pod is already in cart - show "Remove Pod"
          console.log('ðŸ”µ [PodReadyToLaunchSection] Pod is in cart - updating to "Remove Pod"');
          
          // Update classes
          button.classList.remove('bg-primary-600', 'hover:bg-primary-700');
          button.classList.add('bg-red-500', 'hover:bg-red-600');
          console.log('ðŸ”µ [PodReadyToLaunchSection] Updated button classes:', button.className);
          
          // Update action
          button.setAttribute('data-action', 'remove');
          console.log('ðŸ”µ [PodReadyToLaunchSection] Updated data-action to: remove');
          
          // Update text
          ctaText.textContent = 'Remove Pod';
          console.log('ðŸ”µ [PodReadyToLaunchSection] Updated button text to: Remove Pod');
          
          // Update icon to trash/remove icon
          const icon = button.querySelector('svg');
          if (icon) {
            icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>';
            console.log('ðŸ”µ [PodReadyToLaunchSection] Updated icon to trash icon');
          }
        } else {
          // This pod is not in cart - show "Reserve Pod"
          console.log('ðŸ”µ [PodReadyToLaunchSection] Pod is not in cart - updating to "Reserve Pod"');
          
          // Update classes
          button.classList.remove('bg-red-500', 'hover:bg-red-600');
          button.classList.add('bg-primary-600', 'hover:bg-primary-700');
          console.log('ðŸ”µ [PodReadyToLaunchSection] Updated button classes:', button.className);
          
          // Update action
          button.setAttribute('data-action', 'add');
          console.log('ðŸ”µ [PodReadyToLaunchSection] Updated data-action to: add');
          
          // Update text
          ctaText.textContent = 'Reserve Pod';
          console.log('ðŸ”µ [PodReadyToLaunchSection] Updated button text to: Reserve Pod');
          
          // Update icon back to arrow icon
          const icon = button.querySelector('svg');
          if (icon) {
            icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>';
            console.log('ðŸ”µ [PodReadyToLaunchSection] Updated icon to arrow icon');
          }
        }
        
        console.log('ðŸ”µ [PodReadyToLaunchSection] Final button text:', ctaText.textContent);
        console.log('ðŸ”µ [PodReadyToLaunchSection] Final button classes:', button.className);
      } else {
        console.log('ðŸ”µ [PodReadyToLaunchSection] Button or ctaText not found!');
        console.log('ðŸ”µ [PodReadyToLaunchSection] Button:', button);
        console.log('ðŸ”µ [PodReadyToLaunchSection] ctaText:', ctaText);
      }
    } catch (error) {
      console.error('ðŸ”µ [PodReadyToLaunchSection] Error updating CTA button:', error);
    }
  }

  // Handle CTA button clicks
  document.addEventListener('click', async function(e) {
    console.log('ðŸ”µ [PodReadyToLaunchSection] Click event detected on:', e.target);
    
    if (e.target && (e.target as Element).closest('.pod-ready-cta-btn')) {
      e.preventDefault();
      e.stopPropagation();
      
      const button = (e.target as Element).closest('.pod-ready-cta-btn') as HTMLElement;
      if (button) {
        const action = button.getAttribute('data-action') || 'add';
        const podId = button.getAttribute('data-item-id');
        const buttonText = button.querySelector('.cta-text')?.textContent;
        
        console.log('ðŸ”µ [PodReadyToLaunchSection] CTA button clicked:', { 
          action, 
          podId, 
          buttonText,
          buttonClasses: button.className 
        });
        
        try {
          const { SummaryShared } = await import('../../utils/summaryShared.js');
          const shared = new SummaryShared();
          
          if (action === 'add') {
            // Add pod to cart
            console.log('ðŸ”µ [PodReadyToLaunchSection] Attempting to add pod to cart...');
            const selectedPod = await shared.selectPodWithConfirmation(podId);
            const success = !!selectedPod;
            if (success) {
              console.log('ðŸ”µ [PodReadyToLaunchSection] Pod added to cart successfully');
              // Navigate to summary page
              window.location.href = '/summary?step=1';
            } else {
              console.log('ðŸ”µ [PodReadyToLaunchSection] Failed to add pod to cart');
            }
          } else if (action === 'remove') {
            // Remove pod from cart
            console.log('ðŸ”µ [PodReadyToLaunchSection] Attempting to remove pod from cart...');
            const success = await shared.removePod();
            if (success) {
              console.log('ðŸ”µ [PodReadyToLaunchSection] Pod removed from cart successfully');
              // Update button appearance
              updatePodReadyCTA();
            } else {
              console.log('ðŸ”µ [PodReadyToLaunchSection] Failed to remove pod from cart');
            }
          }
        } catch (error) {
          console.error('ðŸ”µ [PodReadyToLaunchSection] Error handling CTA button:', error);
        }
      }
    }
  });
</script> 