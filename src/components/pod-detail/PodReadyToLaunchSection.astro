---
interface Props {
  pod: {
    id: string;
    name: string;
    tagline: string;
    pricing: string[];
    basePriceINR: number;
    basePriceUSD: number;
    discountPercentage: number;
  };
}

const { pod } = Astro.props;
---

<section class="py-12 bg-graphite-900">
  <div class="container mx-auto max-w-screen-2xl px-4">
    <div class="max-w-4xl mx-auto text-center">
      
      <!-- Main Headline -->
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-inter font-bold text-white mb-4 leading-tight">
        Ready to Launch with This Pod?
      </h2>
      
      <!-- Subtitle -->
      <p class="text-lg md:text-xl font-inter text-graphite-300 mb-6 leading-relaxed max-w-3xl mx-auto">
        Start your project today and get your dedicated team of experts
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-3 justify-center mb-8">
        <button 
          id={`pod-ready-cta-${pod.id}`}
          data-add-to-cart
          data-item-id={pod.id}
          data-item-type="pod"
          data-item-title={pod.name}
          data-item-description={pod.tagline}
          data-item-price-inr={pod.basePriceINR}
          data-item-price-usd={pod.basePriceUSD}
          class="pod-ready-cta-btn inline-flex items-center px-6 py-3 bg-gradient-to-r from-mint-500 to-cerulean-500 text-white font-inter font-semibold rounded-lg hover:from-mint-600 hover:to-cerulean-600 transition-all duration-300 group shadow-md hover:shadow-lg hover:scale-105"
          data-action="add"
        >
          <span class="cta-text">Reserve Pod</span>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </button>
        
        <a 
          href="/contact"
          class="inline-flex items-center px-6 py-3 glass border-white/30 text-white font-inter font-semibold rounded-lg hover:bg-white/10 hover:border-white/50 transition-all duration-300 group hover:scale-105"
        >
          <span>Book Discovery Call</span>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </a>
      </div>
      
      <!-- Contact Information -->
      <div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 max-w-md mx-auto">
        <div class="text-graphite-300 mb-2 flex items-center justify-center text-sm font-inter">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          Or reach us directly at:
        </div>
        <div class="space-y-1">
          <a 
            href="mailto:support@novapod.ai"
            onclick="handleEmailClick(event, 'support@novapod.ai')"
            class="block text-cerulean-300 hover:text-cerulean-200 font-inter font-medium transition-colors duration-300 text-sm cursor-pointer"
          >
            ðŸ“© support@novapod.ai
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Handle email click with fallback to browser
  function handleEmailClick(event: Event, email: string) {
    // Try to open default mail client
    const mailtoLink = `mailto:${email}`;

    // Create a temporary link to test if mailto works
    const testLink = document.createElement('a');
    testLink.href = mailtoLink;

    // Check if the browser supports mailto protocol
    if (testLink.protocol === 'mailto:') {
      // Try to open the mail client
      try {
        window.location.href = mailtoLink;

        // Set a timeout to check if mail client opened
        setTimeout(() => {
          // If we're still on the same page after 2 seconds,
          // it likely means no mail client is configured
          // Open Gmail in browser as fallback
          const gmailUrl = `https://mail.google.com/mail/?view=cm&fs=1&to=${encodeURIComponent(email)}`;
          window.open(gmailUrl, '_blank');
        }, 2000);
      } catch (error) {
        // If mailto fails, open Gmail in browser
        const gmailUrl = `https://mail.google.com/mail/?view=cm&fs=1&to=${encodeURIComponent(email)}`;
        window.open(gmailUrl, '_blank');
      }
    } else {
      // If mailto protocol is not supported, open Gmail in browser
      const gmailUrl = `https://mail.google.com/mail/?view=cm&fs=1&to=${encodeURIComponent(email)}`;
      window.open(gmailUrl, '_blank');
    }

    // Prevent default behavior
    event.preventDefault();
  }

  // Get the current pod ID from the button's data attribute
  let currentPodId = '';
  
  // Function to get pod ID from button data attribute
  function getCurrentPodId() {
    const button = document.querySelector('.pod-ready-cta-btn');
    if (button) {
      return button.getAttribute('data-item-id') || '';
    }
    return '';
  }
  
  // Check localStorage and update CTA button accordingly
  document.addEventListener('DOMContentLoaded', function() {
    console.log('ðŸ”µ [PodReadyToLaunchSection] DOMContentLoaded - updating CTA button');
    
    // Get current pod ID from button data attribute
    currentPodId = getCurrentPodId();
    console.log('ðŸ”µ [PodReadyToLaunchSection] Current pod ID from button:', currentPodId);
    
    // Immediate check with localStorage
    try {
      const cart = JSON.parse(localStorage.getItem('novapod-cart') || '[]');
      const selectedPod = cart.find((item: any) => item.type === 'pod');
      console.log('ðŸ”µ [PodReadyToLaunchSection] Immediate localStorage check - cart:', cart);
      console.log('ðŸ”µ [PodReadyToLaunchSection] Immediate localStorage check - selectedPod:', selectedPod);
      console.log('ðŸ”µ [PodReadyToLaunchSection] Current pod ID:', currentPodId);
      
      if (selectedPod && selectedPod.id === currentPodId) {
        console.log('ðŸ”µ [PodReadyToLaunchSection] Pod is in cart - should show Remove Pod');
      } else {
        console.log('ðŸ”µ [PodReadyToLaunchSection] Pod is not in cart - should show Reserve Pod');
      }
    } catch (error) {
      console.error('ðŸ”µ [PodReadyToLaunchSection] Error in immediate localStorage check:', error);
    }
    
    setTimeout(() => {
      updatePodReadyCTA();
    }, 100);
  });

  // Listen for cart updates
  document.addEventListener('cart-updated', function() {
    console.log('ðŸ”µ [PodReadyToLaunchSection] Cart updated event received - updating CTA button');
    // Update current pod ID in case it changed
    currentPodId = getCurrentPodId();
    setTimeout(() => {
      updatePodReadyCTA();
    }, 100);
  });

  // Update CTA button when cart changes
  window.addEventListener('cart-updated', function() {
    updatePodReadyCTA();
  });

  // Function to update pod ready CTA button based on cart state
  async function updatePodReadyCTA() {
    try {
      console.log('ðŸ”µ [PodReadyToLaunchSection] updatePodReadyCTA called');
      
      // Import the shared utility
      const { SummaryShared } = await import('../../utils/summaryShared.js');
      const shared = new SummaryShared();
      const cart = await shared.getCart();
      const selectedPod = cart.find((item: any) => item.type === 'pod');
      
      console.log('ðŸ”µ [PodReadyToLaunchSection] Current cart:', cart);
      console.log('ðŸ”µ [PodReadyToLaunchSection] Selected pod:', selectedPod);
      console.log('ðŸ”µ [PodReadyToLaunchSection] Current pod ID:', currentPodId);
      
      let button = document.querySelector('.pod-ready-cta-btn') as HTMLElement;
      console.log('ðŸ”µ [PodReadyToLaunchSection] Found button with .pod-ready-cta-btn:', button);
      
      // Update current pod ID before fallback selectors
      currentPodId = getCurrentPodId();
      
      // Fallback selectors if button not found
      if (!button) {
        button = document.querySelector(`[data-add-to-cart][data-item-id="${currentPodId}"]`) as HTMLElement;
        console.log('ðŸ”µ [PodReadyToLaunchSection] Found button with fallback selector:', button);
      }
      
      if (!button) {
        button = document.querySelector(`#pod-ready-cta-${currentPodId}`) as HTMLElement;
        console.log('ðŸ”µ [PodReadyToLaunchSection] Found button with ID selector:', button);
      }
      
      const ctaText = button?.querySelector('.cta-text');
      console.log('ðŸ”µ [PodReadyToLaunchSection] Found ctaText:', ctaText);
      
      if (button && ctaText) {
        console.log('ðŸ”µ [PodReadyToLaunchSection] Button and ctaText found - updating...');
        console.log('ðŸ”µ [PodReadyToLaunchSection] Current button text:', ctaText.textContent);
        console.log('ðŸ”µ [PodReadyToLaunchSection] Current button classes:', button.className);
        
        if (selectedPod && selectedPod.id === currentPodId) {
          // This pod is already in cart - show "Remove Pod"
          console.log('ðŸ”µ [PodReadyToLaunchSection] Pod is in cart - updating to "Remove Pod"');
          
          // Update classes
          button.classList.remove('bg-gradient-to-r', 'from-mint-500', 'to-cerulean-500', 'text-white', 'hover:from-mint-600', 'hover:to-cerulean-600', 'hover:scale-105', 'hover:shadow-lg', 'shadow-md');
          button.classList.add('text-white', 'hover:text-red-300', 'bg-transparent', 'hover:bg-red-500/20', '!text-white');
          console.log('ðŸ”µ [PodReadyToLaunchSection] Updated button classes:', button.className);
          
          // Update action
          button.setAttribute('data-action', 'remove');
          console.log('ðŸ”µ [PodReadyToLaunchSection] Updated data-action to: remove');
          
          // Update text
          ctaText.textContent = 'Remove Pod';
          console.log('ðŸ”µ [PodReadyToLaunchSection] Updated button text to: Remove Pod');
          
        } else {
          // This pod is not in cart - show "Reserve Pod"
          console.log('ðŸ”µ [PodReadyToLaunchSection] Pod is not in cart - updating to "Reserve Pod"');
          
          // Update classes
          button.classList.remove('text-white', 'hover:text-red-300', 'bg-transparent', 'hover:bg-red-500/20', '!text-white');
          button.classList.add('bg-gradient-to-r', 'from-mint-500', 'to-cerulean-500', 'text-white', 'hover:from-mint-600', 'hover:to-cerulean-600', 'hover:scale-105', 'hover:shadow-lg', 'shadow-md');
          console.log('ðŸ”µ [PodReadyToLaunchSection] Updated button classes:', button.className);
          
          // Update action
          button.setAttribute('data-action', 'add');
          console.log('ðŸ”µ [PodReadyToLaunchSection] Updated data-action to: add');
          
          // Update text
          ctaText.textContent = 'Reserve Pod';
          console.log('ðŸ”µ [PodReadyToLaunchSection] Updated button text to: Reserve Pod');
        }
      } else {
        console.log('ðŸ”µ [PodReadyToLaunchSection] Button or ctaText not found');
      }
    } catch (error) {
      console.error('ðŸ”µ [PodReadyToLaunchSection] Error updating pod ready CTA:', error);
    }
  }
</script> 