---
export interface Props {
  title: string;
  packs: Array<{
    id: string;
    title: string;
    description: string;
    image: string;
    targetAudience: string;
    duration: string;
    price: string;
  }>;
  className?: string;
}

const { title, packs, className = "" } = Astro.props;
---

<section class={`py-16 bg-gray-1 dark:bg-dark-2 ${className}`}>
  <div class="container mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-bold mb-10 text-center text-dark dark:text-white">{title}</h2>
    <div class="grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto">
      {packs.map((pack) => (
        <div class="bg-white dark:bg-dark rounded-2xl shadow-lg overflow-hidden flex flex-col group hover:scale-105 hover:shadow-xl transition-all duration-300 ease-in-out">
          <div class="h-[200px] w-full bg-cover bg-center bg-no-repeat relative">
            <img src={pack.image} alt={pack.title} class="w-full h-full object-cover" />
          </div>
          <div class="p-6 flex-1 flex flex-col bg-white dark:bg-dark">
            <h3 class="font-bold text-lg mb-2 text-dark dark:text-white">{pack.title}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">{pack.description}</p>
            <div class="mt-2 mb-2">
              <span class="text-xs font-semibold text-gray-700 dark:text-gray-300">Who it's for:</span>
              <p class="text-xs text-gray-600 dark:text-gray-400 mt-1">{pack.targetAudience}</p>
            </div>
            <div class="mt-2 mb-4">
              <span class="inline-flex items-center px-4 py-2 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                {pack.duration}
              </span>
            </div>
            <div class="flex-1"></div>
            <hr class="my-4 border-gray-200 dark:border-gray-700" />
            <div class="flex items-center justify-between text-xs pt-6">
              <div class="flex flex-col gap-1">
                <div class="font-bold text-green-600 dark:text-green-400 text-sm">{pack.price}</div>
              </div>
              <button class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-medium text-sm shadow-lg transition-all duration-300 transform hover:scale-105">
                <span>View Details</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 