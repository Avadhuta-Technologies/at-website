---
export interface Props {
  title: string;
  cards: Array<{
    title: string;
    description: string;
    icon: string;
    gradient: string;
  }>;
  className?: string;
}

const { title, cards, className = "" } = Astro.props;
---

<section class={`py-12 bg-white dark:bg-dark ${className}`}>
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-2xl md:text-3xl font-bold mb-6 text-dark dark:text-white">{title}</h2>
    </div>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      {cards.map((card) => (
        <div class="relative rounded-xl shadow-lg flex flex-col justify-end text-left hover:-translate-y-2 transition duration-300 cursor-pointer overflow-hidden min-h-[260px] bg-black">
          <div class={`absolute inset-0 z-10 bg-gradient-to-tr ${card.gradient}`}></div>
          <img src={card.icon} alt={`${card.title} Icon`} class="absolute top-4 right-4 w-10 h-10 opacity-40 z-20" />
          <div class="relative z-30 p-8 flex flex-col items-start justify-end h-full w-full">
            <h3 class="font-bold text-lg mb-2 text-white">{card.title}</h3>
            <p class="text-white text-sm">{card.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 