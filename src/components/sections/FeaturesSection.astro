---
export interface Props {
  title: string;
  image: string;
  items: string[];
  className?: string;
}

const { title, image, items, className = "" } = Astro.props;
---

<section class={`py-16 md:py-24 bg-gray-1 dark:bg-dark-2 ${className}`}>
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center gap-12 md:gap-16">
      <!-- Left: Abstract Image with Colored Background -->
      <div class="relative w-full md:w-1/2 flex justify-center mb-8 md:mb-0 min-h-[256px]">
        <div class="absolute top-8 left-8 w-64 h-64 bg-indigo-100 rounded-lg z-0 hidden md:block"></div>
        <div class="relative z-10 w-64 h-64 flex items-center justify-center">
          <img src={image} alt="Abstract AI" class="w-full h-full object-contain" />
        </div>
      </div>
      <!-- Right: Content -->
      <div class="w-full md:w-1/2">
        <h2 class="text-2xl md:text-3xl font-bold mb-6 text-dark dark:text-white">{title}</h2>
        <ul class="mb-8 space-y-3">
          {items.map((item) => (
            <li class="flex items-center text-gray-700 dark:text-gray-200 text-base">
              <svg class="w-5 h-5 text-blue-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"/>
              </svg>
              {item}
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section> 