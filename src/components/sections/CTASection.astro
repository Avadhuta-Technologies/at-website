---
export interface Props {
  title: string;
  description: string;
  buttonText: string;
  email: string;
  downloadLink: string;
  className?: string;
}

const { title, description, buttonText, email, downloadLink, className = "" } = Astro.props;
---

<section class={`py-16 bg-primary text-white text-center ${className}`}>
  <div class="container mx-auto px-4">
    <h2 class="text-2xl md:text-3xl font-bold mb-4">{title}</h2>
    <p class="mb-6 max-w-xl mx-auto text-base md:text-lg">{description}</p>
    <a href="#" class="inline-block px-8 py-4 bg-white text-primary font-semibold rounded-lg shadow hover:bg-gray-100 transition">{buttonText}</a>
    <div class="mt-6 flex flex-col items-center gap-2">
      <a href={`mailto:${email}`} class="text-sm underline">{email}</a>
      <a href="#" class="text-sm underline">{downloadLink}</a>
    </div>
  </div>
</section> 