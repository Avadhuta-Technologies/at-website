---
export interface Props {
  title: string;
  steps: Array<{
    number: string;
    title: string;
    description: string;
  }>;
  className?: string;
}

const { title, steps, className = "" } = Astro.props;
---

<section class={`py-12 relative bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 dark:from-slate-800 dark:via-slate-900 dark:to-slate-800 overflow-hidden ${className}`}>
  <!-- Decorative Vector Icon Background -->
  <img src="/assets/features/icon-01.svg" alt="Decorative" class="absolute top-0 right-0 w-64 h-64 opacity-10 pointer-events-none select-none z-0" />
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-2xl mx-auto text-center mb-10">
      <h2 class="text-2xl md:text-3xl font-bold mb-6 text-dark dark:text-white">{title}</h2>
    </div>
    <div class="max-w-3xl mx-auto">
      <ol class="relative flex flex-col gap-0">
        {steps.map((step, index) => (
          <li class="flex items-start relative pb-0 z-10">
            <div class="flex flex-col items-center mr-6 min-w-[3rem]">
              <span class={`flex items-center justify-center w-12 h-12 rounded-full font-bold text-lg shadow-lg border-4 border-white dark:border-dark group-hover:scale-105 transition-transform z-10 ${index === 0 ? 'bg-blue-600 text-white' : 'bg-white border-2 border-blue-200 text-blue-700'}`}>
                {step.number}
              </span>
              {index < steps.length - 1 && (
                <svg class="w-6 h-6 text-blue-300 my-2 hidden sm:block z-10" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 5v14m0 0l-5-5m5 5l5-5"/>
                </svg>
              )}
            </div>
            <div class="flex-1 pb-10 sm:pb-0">
              <h3 class="text-xl font-bold text-dark dark:text-white mb-1">{step.title}</h3>
              <p class="text-gray-600 dark:text-gray-400">{step.description}</p>
            </div>
          </li>
        ))}
      </ol>
    </div>
  </div>
  <style>
    @media (max-width: 640px) {
      .w-12 { width: 2.5rem !important; height: 2.5rem !important; font-size: 1rem !important; }
      .min-w-\[3rem\] { min-width: 2.5rem !important; }
      .mr-6 { margin-right: 1rem !important; }
      .pb-10 { padding-bottom: 1.5rem !important; }
      .w-64 { width: 10rem !important; height: 10rem !important; }
    }
  </style>
</section> 