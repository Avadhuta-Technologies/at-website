---
import { blogData } from '../content/home/_blog.js';

export interface Props {
  data?: any;
  className?: string;
}

const { data = blogData, className = "" } = Astro.props;
---

<section class="pt-20 pb-10 lg:pt-[120px] lg:pb-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap -mx-4">
      <div class="w-full px-4">
        <div class="mx-auto max-w-[800px] text-center mb-20">
          <h2 class="mb-5 text-3xl font-bold text-dark sm:text-4xl md:text-[40px] md:leading-[1.2]">
            {data.title}
          </h2>
          <p class="text-base text-body-color">
            {data.subtitle}
          </p>
        </div>
      </div>
    </div>

    <div class="flex flex-wrap -mx-4">
      {data.posts.map((post, index) => (
        <div class="w-full md:w-1/2 lg:w-1/3 px-4">
          <div class="wow fadeInUp group mb-8" data-wow-delay=".1s">
            <div class="overflow-hidden rounded-xl">
              <a href={post.url} class="block">
                <img
                  src={post.image}
                  alt={post.title}
                  class="w-full transition duration-300 group-hover:scale-110"
                />
              </a>
            </div>
            <div class="pt-8">
              <h3>
                <a
                  href={post.url}
                  class="inline-block mb-4 text-xl font-semibold text-dark hover:text-primary sm:text-2xl lg:text-xl xl:text-2xl"
                >
                  {post.title}
                </a>
              </h3>
              <p class="text-base text-body-color">
                {post.excerpt}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>