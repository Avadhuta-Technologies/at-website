        // Navigate to summary page
        window.location.href = '/summary';
      });
    }
    
    // Update cart badge count from localStorage
    function updateCartBadge() {
      try {
        const cartData = localStorage.getItem('novapod-cart');
        if (cartData) {
          const cart = JSON.parse(cartData);
          const count = cart.length;
          
          if (cartBadge) {
            if (count > 0) {
              (cartBadge as HTMLElement).textContent = count.toString();
              (cartBadge as HTMLElement).style.display = 'flex';
            } else {
              (cartBadge as HTMLElement).style.display = 'none';
            }
          }
        } else {
          // No cart data, hide badge
