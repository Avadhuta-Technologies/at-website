---
export interface Project {
  image: string;
  title: string;
  category: string;
  description: string;
  link: string;
}
export interface Props {
  title: string;
  projects: Project[];
}
const { title, projects } = Astro.props;
---

<section class="py-12">
  <div class="container mx-auto">
    <h2 class="text-2xl font-bold mb-8 text-dark ">{title}</h2>
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {projects.map((project, idx) => (
        <div class="group relative rounded-xl overflow-hidden shadow-lg bg-white ">
          <a href={project.link} class="block">
            <img src={project.image} alt={project.title} class="w-full h-56 object-cover transition-transform duration-300 group-hover:scale-105" />
            <div class="p-6">
              <span class="block text-xs font-semibold text-primary mb-2">{project.category}</span>
              <h3 class="text-lg font-bold text-dark  mb-2 group-hover:text-primary transition">{project.title}</h3>
              <p class="text-sm text-body-color  mb-4">{project.description}</p>
              <span class="inline-block text-primary font-semibold group-hover:underline">View Details â†’</span>
            </div>
            <div class="absolute inset-0 bg-black/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </a>
        </div>
      ))}
    </div>
  </div>
</section> 