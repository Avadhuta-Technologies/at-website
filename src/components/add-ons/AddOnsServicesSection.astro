---
import { addOnsServicesData } from '../../content/add-ons/_services.js';

export interface Props {
  data?: any;
  className?: string;
}

const { data = addOnsServicesData, className = "" } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-gray-900">
        {data.title}
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        {data.subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {data.services.map((service, index) => (
        <div class="bg-white rounded-2xl shadow-lg border border-gray-200 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="p-8">
            <div class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center mb-6">
              <span class="text-2xl">{service.icon}</span>
            </div>
            
            <h3 class="text-xl font-bold text-gray-900 mb-4">
              {service.title}
            </h3>
            
            <p class="text-gray-600 mb-6 leading-relaxed">
              {service.description}
            </p>
            
            <ul class="space-y-3 mb-8">
              {service.features.map((feature) => (
                <li class="flex items-center text-gray-600">
                  <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            
            <div class="flex items-center justify-between">
              <div class="text-2xl font-bold text-blue-600">
                {service.price}
              </div>
              <a href="/contact" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors">
                Get Started
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 