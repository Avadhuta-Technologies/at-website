---
export interface Props {
  deliverables: string[];
}

const { deliverables } = Astro.props;
---

<section class="py-20 relative overflow-hidden" id="included">
  <div class="container mx-auto max-w-screen-2xl px-4 relative z-10">
    <!-- Section Header -->
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-inter font-bold text-graphite-900 mb-4">What's Included</h2>
      <p class="text-lg font-inter text-graphite-600 leading-relaxed">Everything you need for a successful outcome</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {deliverables.map((item) => (
        <div class="group relative overflow-hidden rounded-xl transition-all duration-300 hover:scale-105 hover:-translate-y-1">
          <!-- Card Background -->
          <div class="absolute inset-0 bg-white/90 backdrop-blur-sm border border-white/30 rounded-xl shadow-sm group-hover:shadow-xl transition-all duration-300"></div>
          
          <!-- Card Content -->
          <div class="relative p-6">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-mint-100 rounded-lg flex items-center justify-center mr-4 border border-mint-200 shadow-sm group-hover:scale-110 transition-transform duration-300">
                <svg class="w-6 h-6 text-mint-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <span class="font-inter font-semibold text-graphite-900 text-lg">{item.split(' - ')[0]}</span>
            </div>
            <p class="text-graphite-600 font-inter leading-relaxed">{item.split(' - ')[1]}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 