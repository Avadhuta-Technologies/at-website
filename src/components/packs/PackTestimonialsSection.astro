---
export interface Props {
  testimonials?: Array<{
    quote: string;
    author: string;
    role: string;
  }>;
}

const { testimonials } = Astro.props;
---

{testimonials && testimonials.length > 0 && (
  <section class="py-20 relative overflow-hidden">
    <div class="container mx-auto max-w-screen-2xl px-4 relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-inter font-bold mb-4 text-graphite-900">Testimonials</h2>
        <p class="text-lg font-inter text-graphite-600">What our customers say</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {testimonials.map((t) => (
          <div class="group relative overflow-hidden rounded-xl transition-all duration-300 hover:scale-105 hover:-translate-y-1">
            <!-- Card Background -->
            <div class="absolute inset-0 bg-white/90 backdrop-blur-sm border border-white/30 rounded-xl shadow-sm group-hover:shadow-xl transition-all duration-300"></div>
            
            <!-- Card Content -->
            <div class="relative p-6">
              <div class="text-4xl text-mint-100 mb-4 font-inter">"</div>
              <p class="text-lg font-inter text-graphite-800 italic mb-4 leading-relaxed">"{t.quote}"</p>
              <div class="font-inter font-bold text-cerulean-900">{t.author}</div>
              <div class="text-sm font-inter text-graphite-500">{t.role}</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
)} 