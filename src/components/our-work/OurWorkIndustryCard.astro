---
import { generateIndustrySlug } from '../../utils/industryUtils.js';

export interface Props {
  industry: {
    name: string;
    projects: Array<{
      title: string;
      description: string;
    }>;
    
  };
  index: number;
}

const { industry, index } = Astro.props;

// Get contextually appropriate icon based on industry name
const getIndustryIcon = (industryName: string) => {
  const name = industryName.toLowerCase();
  
  if (name.includes('fintech') || name.includes('finance')) return '💰';
  if (name.includes('health') || name.includes('medical')) return '🏥';
  if (name.includes('education') || name.includes('learning')) return '📚';
  if (name.includes('ecommerce') || name.includes('retail')) return '🛒';
  if (name.includes('real estate') || name.includes('property')) return '🏢';
  if (name.includes('travel') || name.includes('tourism')) return '✈️';
  if (name.includes('food') || name.includes('restaurant')) return '🍽️';
  if (name.includes('automotive') || name.includes('car')) return '🚗';
  if (name.includes('entertainment') || name.includes('media')) return '🎬';
  if (name.includes('technology') || name.includes('tech')) return '💻';
  if (name.includes('consulting') || name.includes('services')) return '💼';
  if (name.includes('non-profit') || name.includes('charity')) return '🤝';
  
  return '🏢';
};

// Get color scheme based on industry - using brand colors only
const getIndustryColorClasses = (industryName: string) => {
  const name = industryName.toLowerCase();
  
  if (name.includes('fintech') || name.includes('finance')) return 'bg-mint-100 border-mint-200 text-mint-700';
  if (name.includes('health') || name.includes('medical')) return 'bg-cerulean-100 border-cerulean-200 text-cerulean-700';
  if (name.includes('education') || name.includes('learning')) return 'bg-graphite-100 border-graphite-200 text-graphite-700';
  if (name.includes('ecommerce') || name.includes('retail')) return 'bg-mint-50 border-mint-100 text-mint-600';
  if (name.includes('real estate') || name.includes('property')) return 'bg-cerulean-50 border-cerulean-100 text-cerulean-600';
  if (name.includes('travel') || name.includes('tourism')) return 'bg-graphite-50 border-graphite-100 text-graphite-600';
  if (name.includes('food') || name.includes('restaurant')) return 'bg-mint-100 border-mint-200 text-mint-700';
  if (name.includes('automotive') || name.includes('car')) return 'bg-cerulean-100 border-cerulean-200 text-cerulean-700';
  if (name.includes('entertainment') || name.includes('media')) return 'bg-graphite-100 border-graphite-200 text-graphite-700';
  if (name.includes('technology') || name.includes('tech')) return 'bg-mint-50 border-mint-100 text-mint-600';
  if (name.includes('consulting') || name.includes('services')) return 'bg-cerulean-50 border-cerulean-100 text-cerulean-600';
  if (name.includes('non-profit') || name.includes('charity')) return 'bg-graphite-50 border-graphite-100 text-graphite-600';
  
  return 'bg-mint-100 border-mint-200 text-mint-700';
};
---

<div class="industry-card group relative overflow-hidden rounded-xl transition-all duration-300 hover:scale-105 hover:-translate-y-1 flex flex-col h-full">
  <!-- Card Background - Solid color instead of gradient (matching brand guidelines) -->
  <div class="absolute inset-0 bg-white/90 backdrop-blur-sm border border-white/30 rounded-xl shadow-sm group-hover:shadow-xl transition-all duration-300"></div>
  
  <!-- Card Content -->
  <div class="relative p-6 flex flex-col h-full">
    <!-- Industry Header -->
    <div class="mb-6">
      <div class="flex items-start justify-between mb-4">
        <div class={`w-14 h-14 ${getIndustryColorClasses(industry.name)} rounded-xl flex items-center justify-center border group-hover:scale-110 transition-transform duration-300`}>
          <span class="text-2xl">{getIndustryIcon(industry.name)}</span>
        </div>
        
        <!-- Industry Badge -->
        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-inter font-medium bg-mint-100 text-mint-700 border border-mint-200">
          Industry
        </span>
      </div>
      
      <!-- Industry Title -->
      <h3 class="text-xl font-inter font-bold text-graphite-900 mb-4 group-hover:text-graphite-800 transition-colors duration-300 leading-tight">
        {industry.name}
      </h3>
    </div>
    
    <!-- Projects Section -->
    <div class="flex-1 mb-6">
      <div class="space-y-3">
        {industry.projects.map((project, projectIndex) => (
          <div class="project-item bg-graphite-50/80 rounded-lg p-4 border border-graphite-100/50 backdrop-blur-sm hover:scale-[1.02] transition-all duration-200">
            <h4 class="text-sm font-inter font-semibold text-graphite-900 mb-2 leading-tight">
              {project.title}
            </h4>
            <p class="text-sm font-inter text-graphite-600 leading-relaxed">
              {project.description}
            </p>
          </div>
        ))}
      </div>
    </div>
    
    <!-- Action Section - Always at bottom -->
    <div class="mt-auto pt-4 border-t border-graphite-100/50">
      <a 
        href={`/case-studies?industry=${generateIndustrySlug(industry.name)}`}
        class="inline-flex items-center justify-center w-full px-4 py-2.5 bg-gradient-to-r from-mint-500 to-cerulean-500 text-white font-inter font-semibold rounded-lg hover:from-mint-600 hover:to-cerulean-600 transition-all duration-300 group shadow-sm hover:shadow-md"
      >
        <span class="text-sm">View {industry.name} Projects</span>
        <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</div>

<style>
  /* Industry Card Animations */
  .industry-card {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .industry-card.animate {
    opacity: 1;
    transform: translateY(0);
  }

  /* Hover Effects */
  .industry-card:hover {
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  /* Project Item Hover */
  .project-item:hover {
    background: rgba(255, 255, 255, 0.8);
    border-color: rgba(241, 243, 244, 0.6);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .industry-card {
      padding: 1rem;
    }
  }
</style> 