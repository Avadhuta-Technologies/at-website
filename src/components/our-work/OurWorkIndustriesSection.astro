 ---
import { ourWorkIndustriesData } from '../../../content/our-work/_industries.js';

interface Props {
  data?: typeof ourWorkIndustriesData;
  className?: string;
}

const { data = ourWorkIndustriesData, className = "" } = Astro.props;
---

<section class={`our-work-industries-section ${className}`}>
  <div class="our-work-industries-container">
    <div class="our-work-industries-header">
      <h2 class="our-work-industries-title">{data.title}</h2>
      {data.subtitle && (
        <p class="our-work-industries-subtitle">{data.subtitle}</p>
      )}
    </div>
    
    <div class="our-work-industries-grid">
      {data.industries.map((industry, industryIndex) => (
        <div class="our-work-industry-card" data-industry-index={industryIndex}>
          <div class="our-work-industry-header">
            <h3 class="our-work-industry-title">{industry.name}</h3>
          </div>
          
          <div class="our-work-industry-projects">
            {industry.projects.map((project, projectIndex) => (
              <div class="our-work-project-item" data-project-index={projectIndex}>
                <h4 class="our-work-project-title">{project.title}</h4>
                <p class="our-work-project-description">{project.description}</p>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    {data.moreIndustries && (
      <div class="our-work-more-industries">
        <p class="our-work-more-description">{data.moreIndustries.description}</p>
        <a href="/portfolio" class="our-work-more-button">
          {data.moreIndustries.buttonText}
        </a>
      </div>
    )}
  </div>
</section>

<style>
  .our-work-industries-section {
    @apply py-20 bg-white dark:bg-gray-900;
  }
  
  .our-work-industries-container {
    @apply container mx-auto px-4;
    max-width: 1200px;
  }
  
  .our-work-industries-header {
    @apply text-center mb-16;
  }
  
  .our-work-industries-title {
    @apply text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-4;
  }
  
  .our-work-industries-subtitle {
    @apply text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto;
  }
  
  .our-work-industries-grid {
    @apply grid grid-cols-1 md:grid-cols-2 gap-8 mb-16;
  }
  
  .our-work-industry-card {
    @apply bg-gray-50 dark:bg-gray-800 rounded-2xl p-8 shadow-lg;
  }
  
  .our-work-industry-header {
    @apply mb-6;
  }
  
  .our-work-industry-title {
    @apply text-2xl font-bold text-gray-900 dark:text-white mb-4;
  }
  
  .our-work-industry-projects {
    @apply space-y-6;
  }
  
  .our-work-project-item {
    @apply bg-white dark:bg-gray-700 rounded-xl p-6 shadow-sm;
  }
  
  .our-work-project-title {
    @apply text-lg font-semibold text-gray-900 dark:text-white mb-3;
  }
  
  .our-work-project-description {
    @apply text-gray-600 dark:text-gray-300 leading-relaxed;
  }
  
  .our-work-more-industries {
    @apply text-center;
  }
  
  .our-work-more-description {
    @apply text-lg text-gray-600 dark:text-gray-300 mb-6;
  }
  
  .our-work-more-button {
    @apply inline-flex items-center px-8 py-4 bg-blue-600 text-white font-semibold rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300;
  }
  
  .our-work-more-button:hover {
    @apply bg-blue-700;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .our-work-industries-grid {
      @apply grid-cols-1 gap-6;
    }
    
    .our-work-industry-card {
      @apply p-6;
    }
    
    .our-work-project-item {
      @apply p-4;
    }
    
    .our-work-industries-title {
      @apply text-2xl md:text-3xl;
    }
  }
</style>

<script>
  // Component-specific animations
  import { initScrollAnimations } from '../../../scripts/scrollAnimations.js';
  
  // Initialize scroll animations for this component
  document.addEventListener('DOMContentLoaded', () => {
    initScrollAnimations();
  });
</script> 