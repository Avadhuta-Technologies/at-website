 ---
import { ourWorkIndustriesData } from '../../content/our-work/_industries.js';

interface Props {
  data?: typeof ourWorkIndustriesData;
  className?: string;
}

const { data = ourWorkIndustriesData, className = "" } = Astro.props;
---

<section id="industries-section" class="py-20">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {data.title}
      </h2>
      {data.subtitle && (
        <p class="text-lg text-gray-600 leading-relaxed">
          {data.subtitle}
        </p>
      )}
    </div>
    
    <!-- Industries Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
      {data.industries.map((industry, industryIndex) => (
        <div class="group bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-all duration-300 hover:-translate-y-1">
          <!-- Industry Header -->
          <div class="p-6 border-b border-gray-100">
            <div class="flex items-start justify-between mb-4">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800">
                {industry.name}
              </span>
            </div>
            
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              {industry.name}
            </h3>
          </div>
          
          <!-- Industry Projects -->
          <div class="p-6">
            <div class="space-y-4">
              {industry.projects.map((project, projectIndex) => (
                <div class="bg-gray-50 rounded-lg p-4">
                  <h4 class="text-lg font-semibold text-gray-900 mb-2">
                    {project.title}
                  </h4>
                  <p class="text-sm text-gray-600 leading-relaxed">
                    {project.description}
                  </p>
                </div>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

 