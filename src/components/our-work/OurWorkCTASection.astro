---
export interface Props {
  data: {
    title: string;
    subtitle: string;
    description: string;
    primaryButton: {
      text: string;
      url: string;
    };
    secondaryButton: {
      text: string;
      url: string;
    };
    contactInfo?: {
      email1: string;
    };
  };
}

const { data } = Astro.props;

// Extract email from secondary button if it's a mailto link
const extractEmailFromUrl = (url: string) => {
  if (url.startsWith('mailto:')) {
    return url.replace('mailto:', '');
  }
  return null;
};

const email = extractEmailFromUrl(data.secondaryButton.url);
---

<section class="py-12 bg-graphite-900">
  <div class="container mx-auto max-w-screen-2xl px-4">
    <div class="max-w-4xl mx-auto text-center">
      
      <!-- Main Headline -->
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-inter font-bold text-white mb-4 leading-tight">
        {data.title}
      </h2>
      
      <!-- Subtitle -->
      <p class="text-lg md:text-xl text-graphite-300 mb-6 leading-relaxed max-w-3xl mx-auto font-inter">
        {data.subtitle}
      </p>
      
      <!-- Description -->
      <p class="text-base text-graphite-400 mb-8 max-w-2xl mx-auto leading-relaxed font-inter">
        {data.description}
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-3 justify-center mb-8">
        <a 
          href={data.primaryButton.url}
          class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-mint-500 to-cerulean-500 text-white font-inter font-medium rounded-lg hover:from-mint-600 hover:to-cerulean-600 transition-all duration-300 group shadow-md hover:shadow-lg hover:scale-105"
        >
          <span>{data.primaryButton.text}</span>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        
        
      </div>
      
      <!-- Contact Information (if email is available) -->
      {email && (
        <div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 max-w-md mx-auto">
          <div class="text-graphite-300 mb-2 flex items-center justify-center text-sm font-inter">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Or reach us directly at:
          </div>
          <div class="space-y-1">
            <a 
              href={`mailto:${email}`}
              onclick={`handleEmailClick(event, '${email}')`}
              class="block text-cerulean-300 hover:text-cerulean-200 font-inter font-medium transition-colors duration-300 text-sm cursor-pointer"
            >
              {email}
            </a>
          </div>
        </div>
      )}
    </div>
  </div>
</section>

<script>
  // Handle email click with fallback to browser
  function handleEmailClick(event: Event, email: string) {
    // Try to open default mail client
    const mailtoLink = `mailto:${email}`;
    
    // Create a temporary link to test if mailto works
    const testLink = document.createElement('a');
    testLink.href = mailtoLink;
    
    // Check if the browser supports mailto protocol
    if (testLink.protocol === 'mailto:') {
      // Try to open the mail client
      try {
        window.location.href = mailtoLink;
        
        // Set a timeout to check if mail client opened
        setTimeout(() => {
          // If we're still on the same page after 2 seconds, 
          // it likely means no mail client is configured
          // Open Gmail in browser as fallback
          const gmailUrl = `https://mail.google.com/mail/?view=cm&fs=1&to=${encodeURIComponent(email)}`;
          window.open(gmailUrl, '_blank');
        }, 2000);
      } catch (error) {
        // If mailto fails, open Gmail in browser
        const gmailUrl = `https://mail.google.com/mail/?view=cm&fs=1&to=${encodeURIComponent(email)}`;
        window.open(gmailUrl, '_blank');
      }
    } else {
      // If mailto protocol is not supported, open Gmail in browser
      const gmailUrl = `https://mail.google.com/mail/?view=cm&fs=1&to=${encodeURIComponent(email)}`;
      window.open(gmailUrl, '_blank');
    }
    
    // Prevent default behavior
    event.preventDefault();
  }
</script>

 