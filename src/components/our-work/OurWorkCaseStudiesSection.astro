---
// Case Studies Section Component for Our Work page
import { caseStudiesData } from '../../content/case-studies/_case-studies.js';
import CaseStudyCard from './CaseStudyCard.astro';

// Get first 4 case studies
const featuredCaseStudies = caseStudiesData.caseStudies.slice(0, 4);
---

<!-- Case Studies Section -->
<section class="py-20 bg-gradient-to-br from-mint-50 via-white to-cerulean-50">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-graphite-900 mb-6">
          Featured Case Studies
        </h2>
        <p class="text-lg text-graphite-700 leading-relaxed max-w-3xl mx-auto">
          Explore some of our most impactful projects across different industries and technologies.
        </p>
      </div>

      <!-- Case Studies Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        {featuredCaseStudies.map((caseStudy, index) => (
          <CaseStudyCard caseStudy={caseStudy} index={index} />
        ))}
      </div>

      <!-- View All Button -->
      <div class="text-center">
        <a 
          href="/case-studies" 
          class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-mint-500 to-cerulean-500 text-white font-semibold rounded-xl hover:from-mint-600 hover:to-cerulean-600 transition-all duration-300 transform hover:scale-105 shadow-lg group"
        >
          <span>View All Case Studies</span>
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section> 